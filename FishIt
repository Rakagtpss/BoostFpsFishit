-- // Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // State Config
local Config = {
    AutoSell = false,
    TargetItemSell = "",
    TargetAmountSell = 0,
    AutoEquip = false,
    TargetItemEquip = "",
    Optimized = false,
    Wow = false,
    AfkMode = false
}

-- // UI Config
local UI_WIDTH = 280
local UI_HEIGHT = 400 -- Lebih tinggi untuk menampung input
local ACCENT = Color3.fromRGB(0, 255, 170)

-- // Cleanup
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 18)
MainFrame.Active = true
MainFrame.Draggable = true -- Fitur Floating
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 10)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 40)
Header.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 10)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 13
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

-- Scrolling Content
local Scroll = Instance.new("ScrollingFrame", MainFrame)
Scroll.Size = UDim2.new(1, -10, 1, -80)
Scroll.Position = UDim2.new(0, 5, 0, 45)
Scroll.BackgroundTransparency = 1
Scroll.ScrollBarThickness = 2
Scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y

local Layout = Instance.new("UIListLayout", Scroll)
Layout.Padding = UDim.new(0, 8)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- Helper function untuk Input Box
local function CreateInput(placeholder, isNumber)
    local box = Instance.new("TextBox", Scroll)
    box.Size = UDim2.new(0.9, 0, 0, 30)
    box.PlaceholderText = placeholder
    box.Text = ""
    box.Font = Enum.Font.Gotham
    box.TextSize = 11
    box.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
    box.TextColor3 = Color3.new(1,1,1)
    box.PlaceholderColor3 = Color3.fromRGB(100, 100, 100)
    Instance.new("UICorner", box).CornerRadius = UDim.new(0, 4)
    return box
end

local function CreateToggle(text)
    local btn = Instance.new("TextButton", Scroll)
    btn.Size = UDim2.new(0.9, 0, 0, 35)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 11
    btn.TextColor3 = Color3.new(1,1,1)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

--- /// UI ELEMENTS /// ---

-- Section: Auto Equip
local LabelEquip = Instance.new("TextLabel", Scroll)
LabelEquip.Size = UDim2.new(0.9, 0, 0, 20)
LabelEquip.Text = "AUTO EQUIP SETTINGS"
LabelEquip.TextColor3 = ACCENT
LabelEquip.BackgroundTransparency = 1
LabelEquip.Font = Enum.Font.GothamBold
LabelEquip.TextSize = 10

local EquipInput = CreateInput("Nama Item yg di-Equip...")
local EquipToggle = CreateToggle("AUTO EQUIP: OFF")

-- Section: Auto Sell
local LabelSell = Instance.new("TextLabel", Scroll)
LabelSell.Size = UDim2.new(0.9, 0, 0, 20)
LabelSell.Text = "AUTO SELL SETTINGS"
LabelSell.TextColor3 = ACCENT
LabelSell.BackgroundTransparency = 1
LabelSell.Font = Enum.Font.GothamBold
LabelSell.TextSize = 10

local SellItemInput = CreateInput("Nama Item yg di-Jual...")
local SellAmountInput = CreateInput("Jumlah (Angka)...")
local SellToggle = CreateToggle("AUTO SELL: OFF")

-- Section: Others
local LabelOther = Instance.new("TextLabel", Scroll)
LabelOther.Size = UDim2.new(0.9, 0, 0, 20)
LabelOther.Text = "OTHER TOOLS"
LabelOther.TextColor3 = ACCENT
LabelOther.BackgroundTransparency = 1
LabelOther.Font = Enum.Font.GothamBold
LabelOther.TextSize = 10

local PotatoBtn = CreateToggle("BOOSTER MODE: OFF")
local WowBtn = CreateToggle("WALK ON WATER: OFF")

--- /// LOGIC FUNCTION /// ---

-- Handle Auto Equip
EquipInput.FocusLost:Connect(function() Config.TargetItemEquip = EquipInput.Text end)
EquipToggle.MouseButton1Click:Connect(function()
    Config.AutoEquip = not Config.AutoEquip
    EquipToggle.Text = Config.AutoEquip and "AUTO EQUIP: ON" or "AUTO EQUIP: OFF"
    EquipToggle.BackgroundColor3 = Config.AutoEquip and Color3.fromRGB(0, 150, 100) or Color3.fromRGB(40, 40, 45)
end)

-- Handle Auto Sell
SellItemInput.FocusLost:Connect(function() Config.TargetItemSell = SellItemInput.Text end)
SellAmountInput.FocusLost:Connect(function() Config.TargetAmountSell = tonumber(SellAmountInput.Text) or 0 end)
SellToggle.MouseButton1Click:Connect(function()
    Config.AutoSell = not Config.AutoSell
    SellToggle.Text = Config.AutoSell and "AUTO SELL: ON" or "AUTO SELL: OFF"
    SellToggle.BackgroundColor3 = Config.AutoSell and Color3.fromRGB(150, 50, 50) or Color3.fromRGB(40, 40, 45)
end)

-- Loops
task.spawn(function()
    while task.wait(1) do
        -- Auto Equip Logic
        if Config.AutoEquip and Config.TargetItemEquip ~= "" then
            pcall(function()
                local net = ReplicatedStorage.Packages._Index:FindFirstChild("sleitnick_net@0.2.0").net
                net["RE/EquipItem"]:FireServer(Config.TargetItemEquip)
            end)
        end
        
        -- Auto Sell Logic (Scan Inventory & Prompt)
        if Config.AutoSell and Config.TargetItemSell ~= "" then
            local inv = Player.PlayerGui.Inventory
            -- Cek apakah item ada di inventory (sesuaikan dengan struktur folder UI inventory game tersebut)
            local itemFound = inv:FindFirstChild(Config.TargetItemSell, true)
            
            if itemFound then
                pcall(function()
                    local sellPart = workspace["!!! DEPENDENCIES"]:GetChildren()[4]
                    fireproximityprompt(sellPart.SellPrompt.SellPrompt)
                end)
            end
        end
    end
end)

-- Fitur Booster & WoW tetap sama seperti sebelumnya...
PotatoBtn.MouseButton1Click:Connect(function()
    Config.Optimized = not Config.Optimized
    PotatoBtn.Text = Config.Optimized and "BOOSTER: ON" or "BOOSTER: OFF"
    Lighting.GlobalShadows = not Config.Optimized
end)

WowBtn.MouseButton1Click:Connect(function()
    Config.Wow = not Config.Wow
    WowBtn.Text = Config.Wow and "WOW: ON" or "WOW: OFF"
    -- (Logika BodyVelocity seperti sebelumnya)
end)

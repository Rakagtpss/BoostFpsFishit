-- Helper UI Functions
local function CreateButton(text, color)
    local btn = Instance.new("TextButton", ScrollFrame)
    btn.Size = UDim2.new(0.9, 0, 0, 32)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 10
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.BackgroundColor3 = color or Color3.fromRGB(30, 30, 30)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

local function CreateInput(placeholder)
    local input = Instance.new("TextBox", ScrollFrame)
    input.Size = UDim2.new(0.9, 0, 0, 32)
    input.PlaceholderText = placeholder
    input.Text = ""
    input.Font = Enum.Font.Gotham
    input.TextSize = 11
    input.TextColor3 = Color3.new(1, 1, 1)
    input.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    Instance.new("UICorner", input).CornerRadius = UDim.new(0, 6)
    return input
end

-- UI Elements
local BoostBtn = CreateButton("BOOSTER: OFF")
local RenderBtn = CreateButton("3D RENDERING: ON")
local WowBtn = CreateButton("WALK ON WATER: OFF")

local Line = Instance.new("Frame", ScrollFrame)
Line.Size = UDim2.new(0.9, 0, 0, 2)
Line.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Line.BorderSizePixel = 0

local ReelInp = CreateInput("Reel Delay (Default 0.5)")
local BaitInp = CreateInput("Bait Delay (Default 1.1)")
local FishBtn = CreateButton("START AUTO FISH", Color3.fromRGB(0, 120, 255))

local FpsDisplay = Instance.new("TextLabel", MainFrame)
FpsDisplay.Size = UDim2.new(0.9, 0, 0, 30)
FpsDisplay.Position = UDim2.new(0.05, 0, 1, -35)
FpsDisplay.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
FpsDisplay.TextColor3 = Color3.fromRGB(0, 255, 255)
FpsDisplay.Text = "FPS: --"
FpsDisplay.Font = Enum.Font.Code
FpsDisplay.TextSize = 14
Instance.new("UICorner", FpsDisplay).CornerRadius = UDim.new(0, 6)

-- --- LOGIC (With Safety Checks) --- --

local function getRemotes()
    -- Menggunakan pcall agar script tidak mati jika remote tidak ditemukan
    local success, net = pcall(function()
        return ReplicatedStorage:WaitForChild("Packages"):WaitForChild("_Index"):WaitForChild("sleitnick_net@0.2.0"):WaitForChild("net")
    end)
    if success then return net end
    return nil
end

local function fishingLoop()
    local net = getRemotes()
    if not net then warn("Remotes not found!") return end
    
    local ChargeRod = net:FindFirstChild("RF/ChargeFishingRod")
    local RequestGame = net:FindFirstChild("RF/RequestFishingMinigameStarted")
    local CompleteGame = net:FindFirstChild("RE/CompleteFishingMinigame")
    local CancelInput = net:FindFirstChild("RF/CancelFishingInput")
    
    local args = { -1.115296483039856, 0, 1763651451.636425 }

    while getgenv().fishingStart do
        pcall(function()
            local dReel = tonumber(ReelInp.Text) or 0.56
            local dBait = tonumber(BaitInp.Text) or 1.15
            
            if ChargeRod then ChargeRod:InvokeServer() end
            task.wait(0.05)
            if RequestGame then RequestGame:InvokeServer(unpack(args)) end
            task.wait(dBait)
            if CompleteGame then CompleteGame:FireServer() end
            task.wait(0.1)
            if CancelInput then CancelInput:InvokeServer() end
            task.wait(dReel)
        end)
    end
end

FishBtn.MouseButton1Click:Connect(function()
    getgenv().fishingStart = not getgenv().fishingStart
    FishBtn.Text = getgenv().fishingStart and "STOP AUTO FISH" or "START AUTO FISH"
    FishBtn.BackgroundColor3 = getgenv().fishingStart and Color3.fromRGB(200, 0, 0) or Color3.fromRGB(0, 120, 255)
    if getgenv().fishingStart then task.spawn(fishingLoop) end
end)

-- Minimize Function
MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    MainFrame:TweenSize(Minimized and UDim2.new(0, 260, 0, 35) or UDim2.new(0, 260, 0, 300), "Out", "Quad", 0.3, true)
    ScrollFrame.Visible = not Minimized
    FpsDisplay.Visible = not Minimized
    MinBtn.Text = Minimized and "SHOW" or "HIDE"
end)

-- Basic FPS
local lastT, frames = os.clock(), 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        FpsDisplay.Text = "FPS: " .. frames
        frames, lastT = 0, os.clock()
    end
end)

-- Booster & WOW logic (Simpler for stability)
BoostBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    BoostBtn.BackgroundColor3 = Optimized and Color3.fromRGB(0, 150, 100) or Color3.fromRGB(30, 30, 30)
    settings().Rendering.QualityLevel = Optimized and 1 or 0
end)

print("Seraphin Loaded Successfully!")

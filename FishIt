local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local SoundService = game:GetService("SoundService")
local Debris = game:GetService("Debris")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // State
local Optimized = false
local Minimized = false
local WowEnabled = false
local IsFrozen = false
local AfkModeActive = false
local BV, Conn

-- // Config Wide UI
local UI_WIDTH = 350 -- Ukuran Wide
local UI_HEIGHT = 160 -- Lebih pendek karena tombol menyamping
local ACCENT = Color3.fromRGB(0, 255, 170)
local BG_COLOR = Color3.fromRGB(15, 15, 17)

if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

-- // Notif
local function Notify(title, msg)
    local NotifGui = Instance.new("ScreenGui", CoreGui)
    local Frame = Instance.new("Frame", NotifGui)
    Frame.Size = UDim2.new(0, 200, 0, 60)
    Frame.Position = UDim2.new(1, 10, 0.9, 0)
    Frame.BackgroundColor3 = BG_COLOR
    Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 8)
    Instance.new("UIStroke", Frame).Color = ACCENT
    
    local T = Instance.new("TextLabel", Frame)
    T.Size = UDim2.new(1, 0, 0.4, 0)
    T.Text = title:upper()
    T.TextColor3 = ACCENT
    T.Font = Enum.Font.GothamBold
    T.TextSize = 12
    T.BackgroundTransparency = 1

    local M = Instance.new("TextLabel", Frame)
    M.Size = UDim2.new(1, 0, 0.6, 0)
    M.Position = UDim2.new(0, 0, 0.4, 0)
    M.Text = msg
    M.TextColor3 = Color3.new(1,1,1)
    M.Font = Enum.Font.Gotham
    M.TextSize = 10
    M.BackgroundTransparency = 1

    Frame:TweenPosition(UDim2.new(1, -210, 0.9, 0), "Out", "Quad", 0.5)
    task.delay(3, function()
        Frame:TweenPosition(UDim2.new(1, 10, 0.9, 0), "In", "Quad", 0.5)
        task.wait(0.5)
        NotifGui:Destroy()
    end)
end

-- // UI Creation
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = BG_COLOR
MainFrame.BackgroundTransparency = 0.1
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 10)

-- Header Wide
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 40)
Header.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
Header.BackgroundTransparency = 0.2
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 10)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.5, 0, 1, 0)
Title.Position = UDim2.new(0.04, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 13
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local FpsDisplay = Instance.new("TextLabel", Header)
FpsDisplay.Size = UDim2.new(0.2, 0, 1, 0)
FpsDisplay.Position = UDim2.new(0.55, 0, 0, 0)
FpsDisplay.BackgroundTransparency = 1
FpsDisplay.TextColor3 = ACCENT
FpsDisplay.Text = "60 FPS"
FpsDisplay.Font = Enum.Font.GothamBold
FpsDisplay.TextSize = 12
FpsDisplay.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 50, 0, 24)
MinBtn.Position = UDim2.new(0.83, 0, 0.5, -12)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 9
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 5)

-- Content Area (Wide Grid)
local ContentFrame = Instance.new("Frame", MainFrame)
ContentFrame.Size = UDim2.new(1, -20, 1, -55)
ContentFrame.Position = UDim2.new(0, 10, 0, 48)
ContentFrame.BackgroundTransparency = 1

local GridLayout = Instance.new("UIGridLayout", ContentFrame)
GridLayout.CellSize = UDim2.new(0, 160, 0, 32) -- Tombol menyamping
GridLayout.CellPadding = UDim2.new(0, 10, 0, 8)
GridLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center

local function CreateButton(text)
    local btn = Instance.new("TextButton", ContentFrame)
    btn.Size = UDim2.new(0, 160, 0, 32)
    btn.Text = text
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 10
    btn.TextColor3 = Color3.fromRGB(200, 200, 200)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
    btn.BackgroundTransparency = 0.3
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

-- // Buttons
local FreezeBtn = CreateButton("Freeze Player: OFF")
local WowBtn = CreateButton("Walk On Water: OFF")
local PotatoBtn = CreateButton("Booster Mode: OFF")
local RenderBtn = CreateButton("No Render 3D: OFF")
local FpsCapBtn = CreateButton("FPS CAP: UNLIMITED")

local function UpdateBtnVisual(btn, state)
    btn.BackgroundColor3 = state and ACCENT or Color3.fromRGB(40, 40, 45)
    btn.TextColor3 = state and Color3.new(0,0,0) or Color3.fromRGB(200, 200, 200)
    btn.BackgroundTransparency = state and 0 or 0.3
end

-- // Logic Fitur
FreezeBtn.MouseButton1Click:Connect(function()
    IsFrozen = not IsFrozen
    if HRP then HRP.Anchored = IsFrozen end
    FreezeBtn.Text = "Freeze: " .. (IsFrozen and "ON" or "OFF")
    UpdateBtnVisual(FreezeBtn, IsFrozen)
end)

WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = "WaterWalk: " .. (WowEnabled and "ON" or "OFF")
    UpdateBtnVisual(WowBtn, WowEnabled)
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if HRP then HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z) end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = "Booster: " .. (Optimized and "ON" or "OFF")
    UpdateBtnVisual(PotatoBtn, Optimized)
    Lighting.GlobalShadows = not Optimized
    
    for _, v in pairs(game:GetDescendants()) do
        if Optimized then
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic v.CastShadow = false
            elseif v:IsA("Decal") or v:IsA("Texture") then v.Transparency = 1
            elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then v.Enabled = false
            elseif v:IsA("Sound") then v:Pause() end
        else
            if v:IsA("BasePart") then v.CastShadow = true
            elseif v:IsA("Decal") or v:IsA("Texture") then v.Transparency = 0
            elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then v.Enabled = true
            elseif v:IsA("Sound") then v:Play() end
        end
    end
end)

RenderBtn.MouseButton1Click:Connect(function()
    AfkModeActive = not AfkModeActive
    RunService:Set3dRenderingEnabled(not AfkModeActive)
    RenderBtn.Text = "3D Render: " .. (AfkModeActive and "OFF" or "ON")
    UpdateBtnVisual(RenderBtn, AfkModeActive)
end)

FpsCapBtn.MouseButton1Click:Connect(function()
    local limits = {30, 60, 144, 999}
    _G.limitIdx = ((_G.limitIdx or 4) % #limits) + 1
    local newLimit = limits[_G.limitIdx]
    if setfpscap then setfpscap(newLimit) end
    FpsCapBtn.Text = "FPS: " .. (newLimit > 900 and "UNLIMITED" or newLimit)
end)

-- // Logic Hide (Tetap Minimalis)
MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, Minimized and 40 or UI_HEIGHT), "Out", "Quad", 0.3, true)
    ContentFrame.Visible = not Minimized
    MainFrame.BackgroundTransparency = Minimized and 1 or 0.1
    Header.BackgroundTransparency = Minimized and 1 or 0.2
    MinBtn.Text = Minimized and "SHOW" or "HIDE"
end)

local lastT, frames = os.clock(), 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        FpsDisplay.Text = frames .. " FPS"
        frames, lastT = 0, os.clock()
    end
end)

Notify("SeraphinXRaka", "Loading !!")


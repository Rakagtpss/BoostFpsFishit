-- // --- LOGIC TOTEM ---

-- Fungsi Scan Path Spesifik
local function ScanTotemPath()
    -- Bersihkan list lama
    for _, v in pairs(TotemScroll:GetChildren()) do if v:IsA("TextButton") then v:Destroy() end end
    
    local pathSuccess, folder = pcall(function()
        return game:GetService("ReplicatedStorage").Modules.ModelDownloader.Collection.Totems
    end)
    
    if pathSuccess and folder then
        for _, totem in pairs(folder:GetChildren()) do
            local btn = Instance.new("TextButton", TotemScroll)
            btn.Size = UDim2.new(1, -5, 0, 25)
            btn.BackgroundColor3 = THEME.Button
            btn.Text = "  " .. totem.Name
            btn.TextColor3 = THEME.Text
            btn.Font = Enum.Font.Gotham
            btn.TextSize = 10
            btn.TextXAlignment = Enum.TextXAlignment.Left
            Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 4)
            
            -- Saat item dipilih
            btn.MouseButton1Click:Connect(function()
                SelectedTotemName = totem.Name
                
                -- Update UI Button
                AutoBtn.Text = "AUTO SPAWN: " .. string.upper(SelectedTotemName) .. " [OFF]"
                AutoBtn.BackgroundColor3 = THEME.Alert -- Merah (Ready to start)
                AutoBtn.TextColor3 = Color3.new(1,1,1)
                
                -- Visual Feedback List
                for _, b in pairs(TotemScroll:GetChildren()) do
                    if b:IsA("TextButton") then b.BackgroundColor3 = THEME.Button end
                end
                btn.BackgroundColor3 = THEME.Accent
            end)
        end
    else
        local err = Instance.new("TextLabel", TotemScroll)
        err.Size = UDim2.new(1,0,0,30)
        err.Text = "Folder 'Totems' not found in path!"
        err.TextColor3 = THEME.Alert
        err.BackgroundTransparency = 1
        err.TextSize = 9
    end
end

-- Fungsi Eksekusi Auto Totem
local function SpawnTotem()
    if not SelectedTotemName then return end
    
    -- Remote Path sesuai permintaan
    local net = game:GetService("ReplicatedStorage").Packages._Index:FindFirstChild("sleitnick_net@0.2.0")
    if net and net.net then
        local remote = net.net:FindFirstChild("RE/SpawnTotem")
        if remote then
            local args = {
                [1] = SelectedTotemName -- Menggunakan nama yang dipilih dari list
            }
            remote:FireServer(unpack(args))
            print("Auto Totem Fired: " .. SelectedTotemName)
        end
    end
end

-- Loop Auto (Coroutine)
task.spawn(function()
    while true do
        if AutoTotemActive and SelectedTotemName then
            -- 1. Spawn Totem
            SpawnTotem()
            
            -- 2. Countdown 60 Menit (3600 Detik)
            for i = 3600, 1, -1 do
                if not AutoTotemActive then 
                    TimerLabel.Text = "Status: Stopped"
                    break 
                end
                TimerLabel.Text = "Next Spawn: " .. i .. "s"
                task.wait(1)
            end
        else
            task.wait(0.5)
        end
    end
end)

-- Tombol Toggle Auto
AutoBtn.MouseButton1Click:Connect(function()
    if not SelectedTotemName then return end -- Jangan lakukan apa-apa jika belum pilih
    
    AutoTotemActive = not AutoTotemActive
    
    if AutoTotemActive then
        AutoBtn.Text = "AUTO SPAWN: " .. string.upper(SelectedTotemName) .. " [ON]"
        AutoBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 100) -- Hijau
    else
        AutoBtn.Text = "AUTO SPAWN: " .. string.upper(SelectedTotemName) .. " [OFF]"
        AutoBtn.BackgroundColor3 = THEME.Alert -- Merah
        TimerLabel.Text = "Status: Paused"
    end
end)

-- Tombol Buka Menu Totem
TotemManagerBtn.MouseButton1Click:Connect(function()
    TotemFrame.Visible = not TotemFrame.Visible
    if TotemFrame.Visible then
        TotemManagerBtn.Text = "Close Totem Manager <"
        ScanTotemPath() -- Scan saat dibuka
    else
        TotemManagerBtn.Text = "Open Totem Manager >"
    end
end)

-- // --- FITUR UTILITAS LAINNYA ---
PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "Booster Mode: ON" or "Booster Mode: OFF"
    PotatoBtn.TextColor3 = Optimized and THEME.Accent or THEME.Text
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic v.CastShadow = false end
        end
    end
end)

WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = WowEnabled and "Walk On Water: ON" or "Walk On Water: OFF"
    WowBtn.TextColor3 = WowEnabled and THEME.Accent or THEME.Text
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if HRP then HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z) end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

FpsCapBtn.MouseButton1Click:Connect(function()
    currentLimitIndex = currentLimitIndex + 1
    if currentLimitIndex > #fpsLimits then currentLimitIndex = 1 end
    local newLimit = fpsLimits[currentLimitIndex]
    if setfpscap then setfpscap(newLimit) end
    FpsCapBtn.Text = newLimit > 900 and "FPS Cap: Unlimited" or "FPS Cap: " .. newLimit
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 40), "Out", "Quad", 0.3, true)
        ScrollFrame.Visible = false
        TotemFrame.Visible = false
        MinBtn.Text = "+"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
        task.wait(0.2)
        ScrollFrame.Visible = true
        MinBtn.Text = "-"
    end
end)

-- // Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // State
local Optimized = false
local AfkModeActive = false
local WowEnabled = false
local Minimized = false
local SelectedItem = ""
local BV, Conn

-- // UI Config (Modern Wide Design)
local UI_WIDTH = 320 -- Lebih lebar agar modern
local UI_HEIGHT = 380
local ACCENT = Color3.fromRGB(0, 255, 170)
local BG_COLOR = Color3.fromRGB(15, 15, 17)
local SECONDARY = Color3.fromRGB(25, 25, 30)

-- // Cleanup
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

-- // Main UI Creation
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = BG_COLOR
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 10)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 45)
Header.BackgroundColor3 = SECONDARY
local HeaderCorner = Instance.new("UICorner", Header)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 16 -- Tulisan lebih besar
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 60, 0, 25)
MinBtn.Position = UDim2.new(0.95, -65, 0.5, -12)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 11
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 6)

-- Content Scroll
local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
ScrollFrame.Size = UDim2.new(1, -10, 1, -90)
ScrollFrame.Position = UDim2.new(0, 5, 0, 50)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 3
ScrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
ScrollFrame.CanvasSize = UDim2.new(0,0,0,0)

local Layout = Instance.new("UIListLayout", ScrollFrame)
Layout.Padding = UDim.new(0, 8)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- Utility Function for Buttons
local function CreateButton(text, parent)
    local btn = Instance.new("TextButton", parent or ScrollFrame)
    btn.Size = UDim2.new(0.92, 0, 0, 40) -- Button lebih tebal
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 13 -- Tulisan lebih besar
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.BackgroundColor3 = SECONDARY
    btn.AutoButtonColor = true
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    return btn
end

--- // SECTION: SYSTEM FEATURES
local PotatoBtn = CreateButton("BOOSTER MODE: OFF")
local WowBtn = CreateButton("WALK ON WATER: OFF")
local RenderBtn = CreateButton("NO RENDER 3D: OFF")

--- // SECTION: SELL SYSTEM (NEW)
local Divider = Instance.new("Frame", ScrollFrame)
Divider.Size = UDim2.new(0.9, 0, 0, 2)
Divider.BackgroundColor3 = SECONDARY
Divider.BorderSizePixel = 0

local ScanBtn = CreateButton("üîç SCAN BACKPACK")
ScanBtn.BackgroundColor3 = Color3.fromRGB(40, 60, 100)

local ItemScroll = Instance.new("ScrollingFrame", ScrollFrame)
ItemScroll.Size = UDim2.new(0.92, 0, 0, 100)
ItemScroll.BackgroundColor3 = Color3.fromRGB(20, 20, 22)
ItemScroll.BorderSizePixel = 0
ItemScroll.CanvasSize = UDim2.new(0,0,0,0)
ItemScroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
Instance.new("UICorner", ItemScroll).CornerRadius = UDim.new(0, 6)
local ItemLayout = Instance.new("UIListLayout", ItemScroll)

local SellBtn = CreateButton("üí∞ SELL SELECTED ITEM")
SellBtn.BackgroundColor3 = Color3.fromRGB(180, 130, 0)

-- // LOGIC: SELL & SCAN
local function UpdateItemList()
    for _, v in pairs(ItemScroll:GetChildren()) do if v:IsA("TextButton") then v:Destroy() end end
    
    -- Scan using the specified directory
    local Gears = ReplicatedStorage:WaitForChild("Modules"):WaitForChild("ModelDownloader"):WaitForChild("Collection"):WaitForChild("Gears")
    
    for _, item in pairs(Gears:GetChildren()) do
        local ibtn = Instance.new("TextButton", ItemScroll)
        ibtn.Size = UDim2.new(1, 0, 0, 30)
        ibtn.BackgroundTransparency = 1
        ibtn.Text = item.Name
        ibtn.TextColor3 = Color3.new(0.8, 0.8, 0.8)
        ibtn.Font = Enum.Font.Gotham
        ibtn.TextSize = 12
        
        ibtn.MouseButton1Click:Connect(function()
            SelectedItem = item.Name
            SellBtn.Text = "SELL: " .. item.Name
            for _, b in pairs(ItemScroll:GetChildren()) do if b:IsA("TextButton") then b.TextColor3 = Color3.new(0.8,0.8,0.8) end end
            ibtn.TextColor3 = ACCENT
        end)
    end
end

ScanBtn.MouseButton1Click:Connect(UpdateItemList)

SellBtn.MouseButton1Click:Connect(function()
    if SelectedItem ~= "" then
        -- Fire Priority Prompt
        local prompt = workspace["!!! DEPENDENCIES"]:GetChildren()[8].SellPrompt.SellPrompt
        fireproximityprompt(prompt)
        print("Selling: " .. SelectedItem)
    end
end)

-- // LOGIC: UTILITIES (Same as before but polished)
PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "BOOSTER MODE: ON" or "BOOSTER MODE: OFF"
    PotatoBtn.TextColor3 = Optimized and ACCENT or Color3.new(1,1,1)
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic v.CastShadow = false
            elseif v:IsA("Texture") or v:IsA("Decal") then v.Transparency = 1 end
        end
    end
end)

RenderBtn.MouseButton1Click:Connect(function()
    AfkModeActive = not AfkModeActive
    RunService:Set3dRenderingEnabled(not AfkModeActive)
    RenderBtn.Text = AfkModeActive and "NO RENDER 3D: ON" or "NO RENDER 3D: OFF"
    RenderBtn.TextColor3 = AfkModeActive and Color3.new(1,0,0) or Color3.new(1,1,1)
end)

WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = WowEnabled and "WALK ON WATER: ON" or "WALK ON WATER: OFF"
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        Conn = RunService.Heartbeat:Connect(function()
            HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z)
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 45), "Out", "Quad", 0.3, true)
        ScrollFrame.Visible = false
        MinBtn.Text = "SHOW"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
        task.wait(0.2)
        ScrollFrame.Visible = true
        MinBtn.Text = "HIDE"
    end
end)

-- Footer FPS
local FpsDisplay = Instance.new("TextLabel", MainFrame)
FpsDisplay.Size = UDim2.new(1, 0, 0, 30)
FpsDisplay.Position = UDim2.new(0, 0, 1, -30)
FpsDisplay.BackgroundTransparency = 1
FpsDisplay.TextColor3 = Color3.fromRGB(100, 100, 100)
FpsDisplay.Text = "SYSTEM STABLE"
FpsDisplay.Font = Enum.Font.Code
FpsDisplay.TextSize = 10

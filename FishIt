-- // --- LOGIC AUTO TOTEM ---

local function GetNetRemote(name)
    -- Helper function to safely get remote based on user provided path
    local success, result = pcall(function()
        return ReplicatedStorage.Packages._Index:FindFirstChild("sleitnick_net@0.2.0").net:FindFirstChild(name)
    end)
    if success and result then return result else return nil end
end

local function ActivateTotem()
    if not SelectedTotemName then return end
    
    local Backpack = Player.Backpack
    local Character = Player.Character or Player.CharacterAdded:Wait()
    local Humanoid = Character:WaitForChild("Humanoid", 5)
    
    -- Cari Item di Backpack atau Character
    local TotemTool = Backpack:FindFirstChild(SelectedTotemName) or Character:FindFirstChild(SelectedTotemName)
    
    if TotemTool and Humanoid then
        -- 1. Equip Tool
        Humanoid:EquipTool(TotemTool)
        
        -- 2. Fire Remote (Sesuai path user)
        local SpawnRemote = GetNetRemote("RE/SpawnTotem")
        if SpawnRemote then
             -- User provided: args = {[1] = "Totems"}. 
             -- Note: Usually game expects Totem Name here, but if "Totems" is a category, we try passing the Item Name first.
            SpawnRemote:FireServer(SelectedTotemName) 
            
            -- Feedback
            StatusLabel.Text = "Status: Used " .. SelectedTotemName
            print("Auto Totem: Used " .. SelectedTotemName)
        end
    else
        StatusLabel.Text = "Status: Totem Not Found in Inv"
        -- Matikan auto jika item habis
        AutoTotemActive = false
        ToggleAutoBtn.Text = "ENABLE AUTO: OFF"
        ToggleAutoBtn.BackgroundColor3 = Color3.fromRGB(150, 50, 50)
    end
end

-- Loop Auto Spawn (Setiap 60 Menit)
task.spawn(function()
    while true do
        if AutoTotemActive and SelectedTotemName then
            ActivateTotem()
            
            -- Countdown 60 Menit (3600 Detik)
            for i = 3600, 1, -1 do
                if not AutoTotemActive then break end
                StatusLabel.Text = "Next Totem: " .. i .. "s"
                task.wait(1)
            end
        else
            task.wait(1)
        end
    end
end)

local function ScanTotems()
    for _, v in pairs(TotemScroll:GetChildren()) do if v:IsA("TextButton") then v:Destroy() end end
    
    local found = false
    local itemsToCheck = {}
    
    -- Ambil dari Backpack & Character (siapa tau lagi dipegang)
    for _, item in pairs(Player.Backpack:GetChildren()) do table.insert(itemsToCheck, item) end
    if Player.Character then
        for _, item in pairs(Player.Character:GetChildren()) do 
            if item:IsA("Tool") then table.insert(itemsToCheck, item) end 
        end
    end
    
    for _, item in pairs(itemsToCheck) do
        -- Cek jika nama item mengandung kata "Totem"
        if item:IsA("Tool") and string.find(item.Name, "Totem") then
            found = true
            local btn = Instance.new("TextButton", TotemScroll)
            btn.Size = UDim2.new(1, -5, 0, 25)
            btn.BackgroundColor3 = THEME.Button
            btn.TextColor3 = THEME.Text
            btn.Text = "  " .. item.Name
            btn.Font = Enum.Font.Gotham
            btn.TextSize = 10
            btn.TextXAlignment = Enum.TextXAlignment.Left
            Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 4)
            
            btn.MouseButton1Click:Connect(function()
                SelectedTotemName = item.Name
                TotemMenuBtn.Text = "Auto: " .. item.Name
                
                -- Visual Selection
                for _, b in pairs(TotemScroll:GetChildren()) do
                    if b:IsA("TextButton") then b.BackgroundColor3 = THEME.Button end
                end
                btn.BackgroundColor3 = THEME.Accent
            end)
        end
    end
    
    if not found then
        local lbl = Instance.new("TextLabel", TotemScroll)
        lbl.Size = UDim2.new(1,0,0,30)
        lbl.Text = "No Totems Found in Backpack"
        lbl.TextColor3 = Color3.fromRGB(255, 100, 100)
        lbl.BackgroundTransparency = 1
        lbl.TextSize = 9
    end
end

-- // --- UI EVENTS ---

TotemMenuBtn.MouseButton1Click:Connect(function()
    TotemFrame.Visible = not TotemFrame.Visible
    if TotemFrame.Visible then ScanTotems() end
end)

RefreshBtn.MouseButton1Click:Connect(function()
    ScanTotems()
end)

ToggleAutoBtn.MouseButton1Click:Connect(function()
    if not SelectedTotemName then 
        ToggleAutoBtn.Text = "SELECT A TOTEM FIRST!"
        task.wait(1)
        ToggleAutoBtn.Text = "ENABLE AUTO: OFF"
        return 
    end
    
    AutoTotemActive = not AutoTotemActive
    if AutoTotemActive then
        ToggleAutoBtn.Text = "ENABLE AUTO: ON"
        ToggleAutoBtn.BackgroundColor3 = THEME.Success
        StatusLabel.Text = "Status: Starting Auto..."
    else
        ToggleAutoBtn.Text = "ENABLE AUTO: OFF"
        ToggleAutoBtn.BackgroundColor3 = Color3.fromRGB(150, 50, 50)
        StatusLabel.Text = "Status: Idle"
    end
end)

-- Basic Buttons Logic
PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "Booster Mode: ON" or "Booster Mode: OFF"
    PotatoBtn.TextColor3 = Optimized and THEME.Accent or THEME.Text
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic v.CastShadow = false end
        end
    end
end)

WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = WowEnabled and "Walk On Water: ON" or "Walk On Water: OFF"
    WowBtn.TextColor3 = WowEnabled and THEME.Accent or THEME.Text
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if HRP then HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z) end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

FpsCapBtn.MouseButton1Click:Connect(function()
    currentLimitIndex = currentLimitIndex + 1
    if currentLimitIndex > #fpsLimits then currentLimitIndex = 1 end
    local newLimit = fpsLimits[currentLimitIndex]
    if setfpscap then setfpscap(newLimit) end
    FpsCapBtn.Text = newLimit > 900 and "FPS Cap: Unlimited" or "FPS Cap: " .. newLimit
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 40), "Out", "Quad", 0.3, true)
        ScrollFrame.Visible = false
        TotemFrame.Visible = false
        MinBtn.Text = "+"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
        task.wait(0.2)
        ScrollFrame.Visible = true
        MinBtn.Text = "-"
    end
end)

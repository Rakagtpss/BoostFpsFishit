--[[
    Script Name: RakaGanteng
    Features: Walk On Water, No Render, Auto Lock FPS, Reduce Map, CPU Booster, Speed Boat, Auto Follow TP
    UI Style: Classic Wide (Blue & Cyan)
]]

local Library = {}
local SG = Instance.new("ScreenGui", game.CoreGui)
SG.Name = "RakaGantengUI"

-- Main Frame
local Main = Instance.new("Frame", SG)
Main.Size = UDim2.new(0, 450, 0, 300)
Main.Position = UDim2.new(0.5, -225, 0.5, -150)
Main.BackgroundColor3 = Color3.fromRGB(10, 20, 30)
Main.BorderSizePixel = 2
Main.BorderColor3 = Color3.fromRGB(0, 255, 255) -- Cyan Border

-- Title
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundColor3 = Color3.fromRGB(0, 100, 255) -- Blue
Title.Text = "RAKA GANTENG - MULTI HUB"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.TextSize = 18
Title.Font = Enum.Font.SourceSansBold

-- Container (Scrolling)
local Container = Instance.new("ScrollingFrame", Main)
Container.Size = UDim2.new(1, -20, 1, -50)
Container.Position = UDim2.new(0, 10, 0, 45)
Container.BackgroundTransparency = 1
Container.CanvasSize = UDim2.new(0, 0, 1.5, 0)
Container.ScrollBarThickness = 4

local UIList = Instance.new("UIListLayout", Container)
UIList.Padding = UDim.new(0, 5)

-- Function to Create Buttons
local function CreateButton(txt, callback)
    local btn = Instance.new("TextButton", Container)
    btn.Size = UDim2.new(1, 0, 0, 35)
    btn.BackgroundColor3 = Color3.fromRGB(0, 50, 150)
    btn.Text = txt
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.SourceSans
    btn.TextSize = 16
    
    local corner = Instance.new("UICorner", btn)
    corner.CornerRadius = UDim.new(0, 4)

    btn.MouseButton1Click:Connect(callback)
end

--- FEATURES ---

-- 1. Walk On Water
CreateButton("Toggle Walk On Water", function()
    local p = game.Players.LocalPlayer.Character
    if p and p:FindFirstChild("HumanoidRootPart") then
        local platform = Instance.new("Part", workspace)
        platform.Size = Vector3.new(1000, 1, 1000)
        platform.Anchored = true
        platform.Transparency = 0.5
        platform.Color = Color3.fromRGB(0, 255, 255)
        platform.Position = Vector3.new(p.HumanoidRootPart.Position.X, 0, p.HumanoidRootPart.Position.Z) -- Asumsi level air di 0
        print("Walk on Water Active")
    end
end)

-- 2. No Render (Optimization)
CreateButton("No Render (Performance)", function()
    game:GetService("RunService"):Set3dRenderingEnabled(false)
    print("Rendering Disabled to Save GPU")
end)

-- 3. Auto Lock FPS
CreateButton("Lock FPS (60)", function()
    setfpscap(60)
    print("FPS Locked to 60")
end)

-- 4. Reduce Map & CPU Booster
CreateButton("Reduce Map / CPU Boost", function()
    for _, v in pairs(game.Workspace:GetDescendants()) do
        if v:IsA("BasePart") and not v.Parent:FindFirstChild("Humanoid") then
            v.Material = Enum.Material.SmoothPlastic
            v.CastShadow = false
        elseif v:IsA("Decal") or v:IsA("Texture") then
            v:Destroy()
        end
    end
    print("Map Simplified")
end)

-- 5. Speed for Boat
CreateButton("Speed Boat (x2)", function()
    for _, v in pairs(workspace:GetChildren()) do
        if v.Name:lower():find("boat") or v.Name:lower():find("ship") then
            local body = v:FindFirstChildWhichIsA("BasePart", true)
            if body then
                body.Velocity = body.CFrame.LookVector * 100
            end
        end
    end
end)

-- 6. Auto Follow Teleport (Target: Random Player)
CreateButton("Auto Follow TP", function()
    local target = nil
    for _, v in pairs(game.Players:GetPlayers()) do
        if v ~= game.Players.LocalPlayer then target = v break end
    end
    
    if target then
        game:GetService("RunService").RenderStepped:Connect(function()
            if target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
                game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = target.Character.HumanoidRootPart.CFrame * CFrame.new(0, 0, 3)
            end
        end)
    end
end)

print("RakaGanteng Script Loaded!")

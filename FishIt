local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // State
local AfkModeActive = false 
local Optimized = false
local Minimized = false
local WowEnabled = false
local BV, Conn

-- // Event State
local availableEvents = {} 
local currentEventIndex = 1

-- // FPS Settings
local fpsLimits = {30, 60, 144, 999} 
local currentLimitIndex = 4 

-- // UI Config (Dark Wide & BIG FONT)
local UI_WIDTH = 300 -- Diperlebar lagi agar teks muat
local UI_HEIGHT = 300
local ACCENT = Color3.fromRGB(0, 255, 170)
local BG_DARK = Color3.fromRGB(15, 15, 17)
local ITEM_BG = Color3.fromRGB(25, 25, 30)

-- // Cleanup
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

-- // UI Creation
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = BG_DARK
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 40) -- Header lebih tinggi
Header.BackgroundColor3 = Color3.fromRGB(20, 20, 22)
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.7, 0, 1, 0)
Title.Position = UDim2.new(0.04, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(0.95, 0.95, 0.95)
Title.Font = Enum.Font.GothamBlack -- Font sangat tebal
Title.TextSize = 16 -- Font Besar
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 50, 0, 26)
MinBtn.Position = UDim2.new(1, -60, 0.5, -13)
MinBtn.Text = "_"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 14
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 6)

-- Scrolling Content
local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
ScrollFrame.Size = UDim2.new(1, -14, 1, -70)
ScrollFrame.Position = UDim2.new(0, 7, 0, 45)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 4
ScrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
ScrollFrame.ScrollBarImageColor3 = ACCENT

local Layout = Instance.new("UIListLayout", ScrollFrame)
Layout.Padding = UDim.new(0, 8) -- Jarak antar tombol diperluas
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- Helper Function UI (BIG MODE)
local function CreateButton(text)
    local btn = Instance.new("TextButton", ScrollFrame)
    btn.Size = UDim2.new(0.98, 0, 0, 42) -- Tombol lebih tinggi
    btn.Text = text
    btn.Font = Enum.Font.GothamBold -- Font Tebal
    btn.TextSize = 13 -- Font Lebih Besar
    btn.TextColor3 = Color3.fromRGB(230, 230, 230)
    btn.BackgroundColor3 = ITEM_BG
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    
    btn.MouseEnter:Connect(function() btn.BackgroundColor3 = Color3.fromRGB(45, 45, 50) end)
    btn.MouseLeave:Connect(function() btn.BackgroundColor3 = ITEM_BG end)
    
    return btn
end

local function CreateLabel(text)
    local lbl = Instance.new("TextLabel", ScrollFrame)
    lbl.Size = UDim2.new(0.98, 0, 0, 24)
    lbl.Text = text
    lbl.Font = Enum.Font.GothamBlack
    lbl.TextSize = 12
    lbl.TextColor3 = ACCENT
    lbl.BackgroundTransparency = 1
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    return lbl
end

-- // FITUR UI
CreateLabel("  MAIN FEATURES")
local PotatoBtn = CreateButton("Booster Mode: OFF")
local WowBtn = CreateButton("WALK ON WATER: OFF")
local RenderBtn = CreateButton("No Render 3D: OFF")
local FpsCapBtn = CreateButton("FPS CAP: UNLIMITED")

CreateLabel("  EVENT TELEPORT (Scan GUI)")
local ScanBtn = CreateButton("SCAN EVENTS")
local SelectEventBtn = CreateButton("PILIH: [Scan Dulu]")
local TeleportEventBtn = CreateButton("TELEPORT SEKARANG")

-- Footer
local FpsDisplay = Instance.new("TextLabel", MainFrame)
FpsDisplay.Size = UDim2.new(1, 0, 0, 25)
FpsDisplay.Position = UDim2.new(0, 0, 1, -25)
FpsDisplay.BackgroundTransparency = 1
FpsDisplay.TextColor3 = Color3.fromRGB(150, 150, 150)
FpsDisplay.Text = "FPS: -- | SERAPHIN"
FpsDisplay.Font = Enum.Font.GothamBold
FpsDisplay.TextSize = 12

-- // LOGIC UTAMA

-- Fungsi Scan Event (Path: PlayerGui...Events)
ScanBtn.MouseButton1Click:Connect(function()
    availableEvents = {}
    currentEventIndex = 1
    
    local success, err = pcall(function()
        -- Path sesuai request
        local guiPath = Player.PlayerGui:FindFirstChild("Events")
        if guiPath and guiPath:FindFirstChild("Frame") and guiPath.Frame:FindFirstChild("Events") then
            local container = guiPath.Frame.Events
            
            for _, v in pairs(container:GetChildren()) do
                -- Mengambil nama event dari tombol GUI
                if v:IsA("GuiObject") and v.Visible and not v:IsA("UIListLayout") and not v:IsA("UIGridLayout") then
                    table.insert(availableEvents, v.Name)
                end
            end
        else
            warn("Path GUI Events tidak ditemukan!")
        end
    end)
    
    if #availableEvents > 0 then
        ScanBtn.Text = "SCAN: " .. #availableEvents .. " FOUND"
        ScanBtn.TextColor3 = ACCENT
        SelectEventBtn.Text = "PILIH: " .. availableEvents[1] .. " (1/" .. #availableEvents .. ")"
    else
        ScanBtn.Text = "SCAN: TIDAK ADA / ERROR"
        ScanBtn.TextColor3 = Color3.fromRGB(255, 60, 60)
        SelectEventBtn.Text = "PILIH: [KOSONG]"
    end
end)

-- Fungsi Pilih Event
SelectEventBtn.MouseButton1Click:Connect(function()
    if #availableEvents == 0 then return end
    
    currentEventIndex = currentEventIndex + 1
    if currentEventIndex > #availableEvents then
        currentEventIndex = 1
    end
    
    local eventName = availableEvents[currentEventIndex]
    SelectEventBtn.Text = "PILIH: " .. eventName .. " (" .. currentEventIndex .. "/" .. #availableEvents .. ")"
end)

-- Fungsi Teleport
TeleportEventBtn.MouseButton1Click:Connect(function()
    if #availableEvents == 0 then 
        TeleportEventBtn.Text = "SCAN DULU!"
        task.wait(1)
        TeleportEventBtn.Text = "TELEPORT SEKARANG"
        return 
    end
    
    local targetName = availableEvents[currentEventIndex]
    
    -- Mencari object fisik di Workspace berdasarkan nama dari GUI
    local targetPart = workspace:FindFirstChild(targetName, true) 
    
    if targetPart then
        if targetPart:IsA("Model") and targetPart.PrimaryPart then
            HRP.CFrame = targetPart.PrimaryPart.CFrame + Vector3.new(0, 5, 0)
            TeleportEventBtn.Text = "TELEPORTING..."
        elseif targetPart:IsA("BasePart") then
            HRP.CFrame = targetPart.CFrame + Vector3.new(0, 5, 0)
            TeleportEventBtn.Text = "TELEPORTING..."
        else
             -- Backup search jika tipe part berbeda
            local subPart = targetPart:FindFirstChildWhichIsA("BasePart")
            if subPart then
                HRP.CFrame = subPart.CFrame + Vector3.new(0, 5, 0)
                TeleportEventBtn.Text = "TELEPORTING..."
            else
                TeleportEventBtn.Text = "LOKASI TIDAK VALID"
            end
        end
    else
        TeleportEventBtn.Text = "PART TIDAK ADA DI WS"
    end
    
    task.wait(1)
    TeleportEventBtn.Text = "TELEPORT SEKARANG"
end)

-- Logic FPS Cap
FpsCapBtn.MouseButton1Click:Connect(function()
    currentLimitIndex = currentLimitIndex + 1
    if currentLimitIndex > #fpsLimits then currentLimitIndex = 1 end
    local newLimit = fpsLimits[currentLimitIndex]
    
    if setfpscap then setfpscap(newLimit) end
    
    FpsCapBtn.Text = (newLimit > 900) and "FPS CAP: UNLIMITED" or "FPS CAP: " .. newLimit
end)

-- Potato Mode
PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "BOOSTER MODE: ON" or "BOOSTER MODE: OFF"
    PotatoBtn.TextColor3 = Optimized and ACCENT or Color3.fromRGB(230, 230, 230)
    
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then
                v.Material = Enum.Material.SmoothPlastic
                v.CastShadow = false
            elseif v:IsA("Texture") or v:IsA("Decal") then
                v.Transparency = 1
            elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then
                v.Enabled = false
            end
        end
    end
end)

-- AFK Render
RenderBtn.MouseButton1Click:Connect(function()
    AfkModeActive = not AfkModeActive
    RunService:Set3dRenderingEnabled(not AfkModeActive)
    RenderBtn.Text = AfkModeActive and "NO RENDER 3D: ON" or "NO RENDER 3D: OFF"
    RenderBtn.TextColor3 = AfkModeActive and Color3.fromRGB(255, 60, 60) or Color3.fromRGB(230, 230, 230)
end)

-- Walk on Water
WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = WowEnabled and "WALK ON WATER: ON" or "WALK ON WATER: OFF"
    WowBtn.TextColor3 = WowEnabled and ACCENT or Color3.fromRGB(230, 230, 230)
    
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if HRP then HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z) end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

-- Minimize Function
MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 40), "Out", "Quad", 0.3, true)
        ScrollFrame.Visible = false
        FpsDisplay.Visible = false
        MinBtn.Text = "+"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
        task.wait(0.2)
        ScrollFrame.Visible = true
        FpsDisplay.Visible = true
        MinBtn.Text = "_"
    end
end)

-- FPS Counter
local lastT = os.clock()
local frames = 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        FpsDisplay.Text = "FPS: " .. frames .. " | SERAPHIN"
        frames = 0
        lastT = os.clock()
    end
end)

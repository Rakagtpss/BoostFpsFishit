-- [[ RakaGanteng Hub - Fish It Edition ]] --
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "RakaGanteng | Fish It ðŸŽ£",
   LoadingTitle = "RakaGanteng v3.0",
   LoadingSubtitle = "Super Lite Modern Black",
   ConfigurationSaving = { Enabled = true, FolderName = "RakaGanteng_FishIt" },
   KeySystem = false
})

-- [[ SERVICES ]] --
local LP = game.Players.LocalPlayer
local RS = game:GetService("RunService")
local TS = game:GetService("TeleportService")
local VirtualInputManager = game:GetService("VirtualInputManager")

-- [[ VARIABLES ]] --
local AutoFish = false
local AutoSell = false
local WalkOnWater = false

-- [[ TAB: FISHING ]] --
local FishTab = Window:CreateTab("Auto Farm", 4483362458)

FishTab:CreateToggle({
   Name = "Auto Fishing (Cast & Catch)",
   CurrentValue = false,
   Callback = function(Value)
      AutoFish = Value
      task.spawn(function()
         while AutoFish do
            local Char = LP.Character
            local Tool = Char:FindFirstChildOfClass("Tool") or LP.Backpack:FindFirstChildOfClass("Tool")
            
            if Tool and Tool:FindFirstChild("Events") then
               -- Logika otomatis lempar pancing
               Tool.Events.Cast:FireServer()
               task.wait(2) -- Menunggu ikan menggigit
               -- Logika otomatis tarik (Biasanya trigger event 'Catch')
               Tool.Events.Catch:FireServer()
            end
            task.wait(0.5)
         end
      end)
   end,
})

FishTab:CreateToggle({
   Name = "Auto Claim Event Rewards",
   CurrentValue = false,
   Callback = function(Value)
      _G.ClaimEvent = Value
      while _G.ClaimEvent do
         -- Mencoba memicu remote claim umum di Fish It
         local event = game:GetService("ReplicatedStorage"):FindFirstChild("ClaimEvent", true)
         if event then event:FireServer() end
         task.wait(10)
      end
   end,
})

-- [[ TAB: MOVEMENT ]] --
local MoveTab = Window:CreateTab("Movement", 4483362458)

MoveTab:CreateSlider({
   Name = "Walk Speed",
   Range = {16, 300},
   Increment = 1,
   CurrentValue = 16,
   Callback = function(Value)
      if LP.Character and LP.Character:FindFirstChild("Humanoid") then
         LP.Character.Humanoid.WalkSpeed = Value
      end
   end,
})

-- FITUR WALK ON WATER (Sangat berguna di Fish It)
local WaterPlatform = Instance.new("Part")
WaterPlatform.Size = Vector3.new(10, 1, 10)
WaterPlatform.Anchored = true
WaterPlatform.Transparency = 1
WaterPlatform.Parent = workspace

RS.RenderStepped:Connect(function()
    if WalkOnWater and LP.Character and LP.Character:FindFirstChild("HumanoidRootPart") then
        WaterPlatform.CFrame = CFrame.new(LP.Character.HumanoidRootPart.Position.X, 0.5, LP.Character.HumanoidRootPart.Position.Z)
        WaterPlatform.CanCollide = true
    else
        WaterPlatform.CanCollide = false
    end
end)

MoveTab:CreateToggle({
   Name = "Walk On Water (Surf)",
   CurrentValue = false,
   Callback = function(Value)
      WalkOnWater = Value
   end,
})

-- [[ TAB: PERFORMANCE & SERVER ]] --
local SysTab = Window:CreateTab("System", 4483362458)

SysTab:CreateButton({
   Name = "Server Hop (Look for Boosters)",
   Callback = function()
      local Http = game:GetService("HttpService")
      local API = "https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100"
      local Raw = game:HttpGet(API)
      local Decode = Http:JSONDecode(Raw)
      for i,v in pairs(Decode.data) do
         if v.playing < v.maxPlayers and v.id ~= game.JobId then
            TS:TeleportToPlaceInstance(game.PlaceId, v.id)
         end
      end
   end,
})

SysTab:CreateToggle({
   Name = "No Render (Save Battery/CPU)",
   CurrentValue = false,
   Callback = function(Value)
      RS:Set3dRenderingEnabled(not Value)
   end,
})

-- [[ FLOATING MINI FPS & PING ]] --
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 100, 0, 40)
MainFrame.Position = UDim2.new(0.05, 0, 0.1, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
MainFrame.Active = true
MainFrame.Draggable = true

local StatText = Instance.new("TextLabel", MainFrame)
StatText.Size = UDim2.new(1, 0, 1, 0)
StatText.BackgroundTransparency = 1
StatText.TextColor3 = Color3.fromRGB(0, 255, 255)
StatText.TextSize = 10

RS.Heartbeat:Connect(function()
    local fps = math.floor(1/RS.Heartbeat:Wait())
    local ping = math.floor(game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue())
    StatText.Text = "FPS: "..fps.."\nPING: "..ping.."ms"
end)

-- [[ ANTI-STAFF ]] --
game.Players.PlayerAdded:Connect(function(player)
    if player:GetRankInGroup(0) > 10 then -- Ubah 0 jadi Group ID Fish It jika tahu
        LP:Kick("Staff Detected: " .. player.Name)
    end
end)

Rayfield:Notify({Title = "RakaGanteng Loaded", Content = "Siap untuk memancing!", Duration = 3})

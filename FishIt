    Width = 430, -- Dibuat lebih lebar (Wide)
    Height = 180, -- Tinggi dikurangi agar compact
    Color = Color3.fromRGB(14, 14, 18), 
    HeaderColor = Color3.fromRGB(20, 20, 25),

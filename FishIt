-- // SERAPHIN HELPER - CENTERED VERSION // --
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local TeleportService = game:GetService("TeleportService")
local Stats = game:GetService("Stats")

local Player = Players.LocalPlayer

-- // NOTIFIKASI LOAD CUSTOM
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "SeraphinXRaka",
    Text = "Loading Script",
    Icon = "rbxassetid://6023454852",
    Duration = 5
})

-- // State & Config
local Optimized, Minimized, NoRenderActive = false, false, false
local ACCENT = Color3.fromRGB(0, 255, 170) 
local BG_MAIN = Color3.fromRGB(10, 10, 12)
local BTN_OFF = Color3.fromRGB(28, 28, 33)

-- // ANTI-AFK
task.spawn(function()
    local VirtualUser = game:GetService("VirtualUser")
    Player.Idled:Connect(function() VirtualUser:CaptureController() VirtualUser:ClickButton2(Vector2.new()) end)
end)

-- // Cleanup Old UI
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end
if CoreGui:FindFirstChild("SeraphinFloating") then CoreGui.SeraphinFloating:Destroy() end

-- // 1. MINI FLOATING UI (FPS & PING)
local FloatGui = Instance.new("ScreenGui", CoreGui)
FloatGui.Name = "MiniSeraphine"

local FloatFrame = Instance.new("Frame", FloatGui)
FloatFrame.Size = UDim2.new(0, 150, 0, 35)
FloatFrame.Position = UDim2.new(0.1, 0, 0.05, 0)
FloatFrame.BackgroundColor3 = BG_MAIN
FloatFrame.BackgroundTransparency = 0.2
FloatFrame.Active, FloatFrame.Draggable = true, true
Instance.new("UICorner", FloatFrame)
local FloatStroke = Instance.new("UIStroke", FloatFrame)
FloatStroke.Color, FloatStroke.Thickness = ACCENT, 2

local FloatLabel = Instance.new("TextLabel", FloatFrame)
FloatLabel.Size = UDim2.new(1, 0, 1, 0)
FloatLabel.BackgroundTransparency = 1
FloatLabel.Font = Enum.Font.GothamBold
FloatLabel.TextSize = 14
FloatLabel.TextColor3 = ACCENT
FloatLabel.Text = "FPS: -- | PING: --"

-- // 2. MAIN UI
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, 340, 0, 180)
MainFrame.Position = UDim2.new(0.5, -170, 0.4, 0)
MainFrame.BackgroundColor3 = BG_MAIN
MainFrame.BackgroundTransparency = 0.15
MainFrame.Active, MainFrame.Draggable = true, true
Instance.new("UICorner", MainFrame)

-- JUDUL: SERAPHIN HELPER (DIUBAH & DIGESER KE TENGAH)
local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 35) -- Lebar penuh untuk centering
Title.Position = UDim2.new(0, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14 -- Sedikit lebih besar untuk judul utama
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Center -- Membuat teks ke tengah

local MinBtn = Instance.new("TextButton", MainFrame)
MinBtn.Size = UDim2.new(0, 50, 0, 22)
MinBtn.Position = UDim2.new(1, -58, 0, 7)
MinBtn.Text = "HIDE"
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextColor3 = Color3.new(1,1,1)
MinBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
MinBtn.ZIndex = 2 -- Agar selalu di atas judul
Instance.new("UICorner", MinBtn)

local Scroll = Instance.new("ScrollingFrame", MainFrame)
Scroll.Size, Scroll.Position = UDim2.new(1, -20, 1, -50), UDim2.new(0, 10, 0, 40)
Scroll.BackgroundTransparency, Scroll.CanvasSize = 1, UDim2.new(0,0,0,0)
Scroll.ScrollBarThickness = 0
local Layout = Instance.new("UIGridLayout", Scroll)
Layout.CellSize = UDim2.new(0.5, -7, 0, 38)

-- Fungsi Helper Visual Tombol
local function UpdateButtonVisual(btn, state)
    btn.BackgroundColor3 = state and ACCENT or BTN_OFF
    btn.TextColor3 = state and Color3.new(0,0,0) or Color3.new(0.9,0.9,0.9)
end

local function CreateButton(text)
    local btn = Instance.new("TextButton", Scroll)
    btn.Text, btn.Font, btn.TextSize = text, Enum.Font.GothamBold, 10
    btn.TextColor3, btn.BackgroundColor3 = Color3.new(0.9,0.9,0.9), BTN_OFF
    Instance.new("UICorner", btn)
    return btn
end

local PotBtn = CreateButton("BOOSTER: OFF")
local FpsBtn = CreateButton("FPS: UNLI")
local RedBtn = CreateButton("NO RENDER: OFF")
local WowBtn = CreateButton("W-WALK: OFF")
local FrzBtn = CreateButton("FREEZE: OFF")
local ReBtn = CreateButton("REJOIN SERVER")

-- // 3. CORE LOGIC

-- ULTRA BOOST (Extreme Cleaning)
PotBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotBtn.Text = Optimized and "ULTRA BOOST: ON" or "ULTRA BOOST: OFF"
    UpdateButtonVisual(PotBtn, Optimized)
    
    settings().Rendering.QualityLevel = 1
    Lighting.GlobalShadows = not Optimized
    
    task.spawn(function()
        for i, v in pairs(game:GetDescendants()) do
            if Optimized then
                if v:IsA("ParticleEmitter") or v:IsA("Trail") or v:IsA("Beam") or v:IsA("Fire") or v:IsA("Smoke") then
                    v.Enabled = false
                elseif v:IsA("Decal") or v:IsA("Texture") then
                    v.Transparency = 1
                elseif v:IsA("MeshPart") then
                    v.RenderFidelity = Enum.RenderFidelity.Performance
                    v.CollisionFidelity = Enum.CollisionFidelity.Box
                elseif v:IsA("BasePart") then
                    v.Material = Enum.Material.SmoothPlastic
                    v.CastShadow = false
                end
            end
            if i % 400 == 0 then task.wait() end
        end
    end)
end)

-- NO RENDER (Blackout)
RedBtn.MouseButton1Click:Connect(function()
    NoRenderActive = not NoRenderActive
    RedBtn.Text = NoRenderActive and "NO RENDER: ON" or "NO RENDER: OFF"
    UpdateButtonVisual(RedBtn, NoRenderActive)
    RunService:Set3dRenderingEnabled(not NoRenderActive)
    if NoRenderActive then
        local black = Instance.new("Frame", FloatGui)
        black.Name = "Blackout"
        black.Size = UDim2.new(1,0,1,0)
        black.BackgroundColor3 = Color3.new(0,0,0)
        black.ZIndex = -1
    else
        if FloatGui:FindFirstChild("Blackout") then FloatGui.Blackout:Destroy() end
    end
end)

-- Stats Loop (FPS & PING)
local lastT, frames = os.clock(), 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        local ping = math.floor(Stats.Network.ServerStatsItem["Data Ping"]:GetValue())
        FloatLabel.Text = string.format("FPS: %d | PING: %dms", frames, ping)
        frames, lastT = 0, os.clock()
    end
end)

-- UI Interactions
MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    MainFrame:TweenSize(Minimized and UDim2.new(0, 340, 0, 35) or UDim2.new(0, 340, 0, 180), "Out", "Quad", 0.3, true)
    Scroll.Visible = not Minimized
    MinBtn.Text = Minimized and "SHOW" or "HIDE"
end)

ReBtn.MouseButton1Click:Connect(function() TeleportService:Teleport(game.PlaceId, Player) end)

FrzBtn.MouseButton1Click:Connect(function()
    local HRP = Player.Character and Player.Character:FindFirstChild("HumanoidRootPart")
    if HRP then HRP.Anchored = not HRP.Anchored UpdateButtonVisual(FrzBtn, HRP.Anchored) end
end)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local VirtualUser = game:GetService("VirtualUser")
local fireproximityprompt = fireproximityprompt or function(Obj) -- Support for executors without native fireproximityprompt
    if Obj:IsA("ProximityPrompt") then
        Obj:InputHoldBegin()
        task.wait(Obj.HoldDuration)
        Obj:InputHoldEnd()
    end
end

local Player = Players.LocalPlayer

-- // State Variables
local AutoSellPromptActive = false
local Optimized = false
local Minimized = false
local SelectedItem = ""

-- // UI Config
local UI_WIDTH = 280
local UI_HEIGHT = 450 
local ACCENT = Color3.fromRGB(0, 255, 170)
local BG_DARK = Color3.fromRGB(15, 15, 17)
local ITEM_BG = Color3.fromRGB(25, 25, 30)

-- // Cleanup Old UI
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

-- // UI Creation
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.2, 0)
MainFrame.BackgroundColor3 = BG_DARK
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 35)
Header.BackgroundColor3 = Color3.fromRGB(20, 20, 22)
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.8, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">PROMPT V8</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(0.95, 0.95, 0.95)
Title.Font = Enum.Font.GothamBlack
Title.TextSize = 12
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 45, 0, 22)
MinBtn.Position = UDim2.new(1, -55, 0.5, -11)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 10
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 6)

-- Main Scroll
local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
ScrollFrame.Size = UDim2.new(1, -10, 1, -65)
ScrollFrame.Position = UDim2.new(0, 5, 0, 40)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 2
ScrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
ScrollFrame.ScrollBarImageColor3 = ACCENT

local Layout = Instance.new("UIListLayout", ScrollFrame)
Layout.Padding = UDim.new(0, 6)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- Helper UI Function
local function CreateButton(text)
    local btn = Instance.new("TextButton", ScrollFrame)
    btn.Size = UDim2.new(0.98, 0, 0, 35)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 11
    btn.TextColor3 = Color3.fromRGB(220, 220, 220)
    btn.BackgroundColor3 = ITEM_BG
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

-- --- AUTO SELL WORKSPACE SECTION ---
local SectionLabel = Instance.new("TextLabel", ScrollFrame)
SectionLabel.Size = UDim2.new(1, 0, 0, 20)
SectionLabel.BackgroundTransparency = 1
SectionLabel.Text = "--- WORKSPACE AUTO SELL ---"
SectionLabel.TextColor3 = ACCENT
SectionLabel.Font = Enum.Font.Code
SectionLabel.TextSize = 10

local AutoPromptBtn = CreateButton("AUTO SELL PROMPT: OFF")
AutoPromptBtn.BackgroundColor3 = Color3.fromRGB(40, 60, 40)

-- --- LOGIC AUTO SELL PROMPT ---
AutoPromptBtn.MouseButton1Click:Connect(function()
    AutoSellPromptActive = not AutoSellPromptActive
    AutoPromptBtn.Text = AutoSellPromptActive and "AUTO SELL PROMPT: ON" or "AUTO SELL PROMPT: OFF"
    AutoPromptBtn.TextColor3 = AutoSellPromptActive and ACCENT or Color3.fromRGB(220, 220, 220)
    
    if AutoSellPromptActive then
        task.spawn(function()
            while AutoSellPromptActive do
                pcall(function()
                    -- Path Spesifik yang Kamu Berikan
                    local targetPrompt = workspace["!!! DEPENDENCIES"]:GetChildren()[4].SellPrompt.SellPrompt
                    
                    if targetPrompt and targetPrompt:IsA("ProximityPrompt") then
                        -- Menggunakan fungsi fireproximityprompt (fitur executor)
                        fireproximityprompt(targetPrompt)
                    end
                end)
                task.wait(0.5) -- Interval tekan prompt (sesuaikan jika terlalu cepat)
            end
        end)
    end
end)

-- --- MANUAL REMOTE SELL (V7 Logic) ---
local RemoteLabel = Instance.new("TextLabel", ScrollFrame)
RemoteLabel.Size = UDim2.new(1, 0, 0, 20)
RemoteLabel.BackgroundTransparency = 1
RemoteLabel.Text = "--- REMOTE SELL (ITEM SELECT) ---"
RemoteLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
RemoteLabel.Font = Enum.Font.Code
RemoteLabel.TextSize = 10

local SellSelectBtn = CreateButton("SELL SELECTED ITEM (RF)")
SellSelectBtn.BackgroundColor3 = Color3.fromRGB(60, 30, 30)

SellSelectBtn.MouseButton1Click:Connect(function()
    pcall(function()
        local remote = ReplicatedStorage.Packages._Index["sleitnick_net@0.2.0"].net["RF/SellItem"]
        remote:InvokeServer(SelectedItem)
    end)
end)

-- --- OTHER TOOLS ---
local PotatoBtn = CreateButton("Booster Mode: OFF")

PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "Booster Mode: ON" or "Booster Mode: OFF"
    PotatoBtn.TextColor3 = Optimized and ACCENT or Color3.fromRGB(220, 220, 220)
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic elseif v:IsA("Texture") then v.Transparency = 1 end
        end
    end
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    MainFrame:TweenSize(Minimized and UDim2.new(0, UI_WIDTH, 0, 35) or UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
    ScrollFrame.Visible = not Minimized
    MinBtn.Text = Minimized and "SHOW" or "HIDE"
end)

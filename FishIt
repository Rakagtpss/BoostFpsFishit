-- ====================================================
-- LOGIC: SCAN REPLICATED STORAGE
-- ====================================================

local function UpdateItemList()
    -- Bersihkan list lama
    for _, child in pairs(InvListFrame:GetChildren()) do
        if child:IsA("TextButton") then child:Destroy() end
    end
    
    ScanBtn.Text = "SCANNING..."
    
    -- Target Folder: ReplicatedStorage.Items
    local itemsFolder = ReplicatedStorage:FindFirstChild("Items")
    
    if itemsFolder then
        local foundItems = {}
        
        -- Loop isi folder
        for _, item in pairs(itemsFolder:GetChildren()) do
            -- Kita masukkan ke tabel biar rapi
            table.insert(foundItems, item.Name)
        end
        
        -- Sortir nama item sesuai abjad (A-Z) biar gampang dicari
        table.sort(foundItems)
        
        -- Buat Tombol
        for _, itemName in pairs(foundItems) do
            local btn = Instance.new("TextButton", InvListFrame)
            btn.Size = UDim2.new(1, 0, 0, 25)
            btn.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
            btn.Text = "  " .. itemName
            btn.TextColor3 = Color3.new(0.9, 0.9, 0.9)
            btn.Font = Enum.Font.Gotham
            btn.TextSize = 11
            btn.TextXAlignment = Enum.TextXAlignment.Left
            btn.BorderSizePixel = 0
            
            -- Logic Select
            btn.MouseButton1Click:Connect(function()
                SelectedItem = itemName
                SelectedDisplay.Text = "Selected: " .. itemName
                -- Efek Visual Select
                for _, b in pairs(InvListFrame:GetChildren()) do
                    if b:IsA("TextButton") then b.BackgroundColor3 = Color3.fromRGB(30, 30, 35) end
                end
                btn.BackgroundColor3 = ACCENT
            end)
        end
        ScanBtn.Text = "REFRESH LIST (" .. #foundItems .. " Found)"
    else
        ScanBtn.Text = "ERROR: Folder 'Items' Not Found"
        warn("Folder game:GetService('ReplicatedStorage').Items tidak ditemukan!")
    end
end

ScanBtn.MouseButton1Click:Connect(UpdateItemList)

-- Logic Tombol Sell (Remote yang kamu berikan)
SellSelectBtn.MouseButton1Click:Connect(function()
    if not SelectedItem then
        SelectedDisplay.Text = "ERROR: Select an item first!"
        return
    end
    
    local amount = tonumber(AmountBox.Text) or 1
    
    -- EKSEKUSI REMOTE
    local success, err = pcall(function()
        -- PATH REMOTE SPESIFIK KAMU
        local remote = ReplicatedStorage.Packages._Index["sleitnick_net@0.2.0"].net["RF/SellItem"]
        
        -- Format: (NamaItem, Jumlah)
        remote:InvokeServer(SelectedItem, amount)
    end)
    
    if success then
        SelectedDisplay.Text = "Sent: " .. SelectedItem .. " (x" .. amount .. ")"
    else
        SelectedDisplay.Text = "FAIL (Check Console)"
        warn("Sell Failed: " .. tostring(err))
    end
end)

-- ====================================================
-- LOGIC: FITUR LAINNYA
-- ====================================================

PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "Booster Mode: ON" or "Booster Mode: OFF"
    PotatoBtn.TextColor3 = Optimized and ACCENT or Color3.fromRGB(220, 220, 220)
    Lighting.GlobalShadows = not Optimized
    
    if Optimized then
        -- Cleaner
        local targetNames = {"VFX", "Assets", "Effects", "Particles", "Debris"}
        local function clearFolders(parent)
            for _, name in pairs(targetNames) do
                if parent:FindFirstChild(name) then parent[name]:ClearAllChildren() end
            end
        end
        clearFolders(ReplicatedStorage)
        clearFolders(Workspace)
        
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then
                v.Material = Enum.Material.SmoothPlastic
                v.CastShadow = false
            elseif v:IsA("Texture") then
                v.Transparency = 1
            elseif v:IsA("ParticleEmitter") then
                v.Enabled = false
            end
        end
    end
end)

WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = WowEnabled and "Walk On Water: ON" or "Walk On Water: OFF"
    WowBtn.TextColor3 = WowEnabled and ACCENT or Color3.fromRGB(220, 220, 220)
    
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if HRP then HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z) end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

RenderBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    RunService:Set3dRenderingEnabled(not Minimized) -- Reuse variable Minimized for render toggle state locally here or make new one
    RenderBtn.Text = Minimized and "No Render 3D: ON" or "No Render 3D: OFF"
    RenderBtn.TextColor3 = Minimized and RED_ACCENT or Color3.fromRGB(220, 220, 220)
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 35), "Out", "Quad", 0.3, true)
        ScrollFrame.Visible = false
        FpsDisplay.Visible = false
        MinBtn.Text = "SHOW"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
        task.wait(0.2)
        ScrollFrame.Visible = true
        FpsDisplay.Visible = true
        MinBtn.Text = "HIDE"
    end
end)

-- FPS Counter
local lastT = os.clock()
local frames = 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        FpsDisplay.Text = "FPS: " .. frames .. " | SERAPHIN"
        frames = 0
        lastT = os.clock()
    end
end)

--[[ 
⚠️ DISCLAIMER:
Script ini hanya untuk tujuan pembelajaran dan eksperimen pribadi di tempat yang kamu miliki izin. 
Menggunakan script seperti ini di game publik tanpa izin bisa melanggar TOS Roblox.
]]

-- UI Setup
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0.4, 0, 0.5, 0)
Frame.Position = UDim2.new(0.3, 0, 0.25, 0)
Frame.BackgroundColor3 = Color3.fromRGB(10, 30, 60)
Frame.BorderSizePixel = 0

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, 0, 0.1, 0)
Title.Text = "⚙️ Raka's Utility Hub"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.SourceSansBold
Title.TextScaled = true

-- Walk on Water
game:GetService("RunService").Stepped:Connect(function()
    local char = game.Players.LocalPlayer.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        local pos = char.HumanoidRootPart.Position
        if workspace:FindPartOnRay(Ray.new(pos, Vector3.new(0, -5, 0))).Name == "Water" then
            char.HumanoidRootPart.Velocity = Vector3.new(0, 0, 0)
            char.HumanoidRootPart.CFrame = CFrame.new(pos.X, workspace.Water.Position.Y + 3, pos.Z)
        end
    end
end)

-- Anti-AFK
local VirtualUser = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    VirtualUser:Button2Down(Vector2.new())
    wait(1)
    VirtualUser:Button2Up(Vector2.new())
end)

-- Fake Name/Level
local player = game.Players.LocalPlayer
player.Name = "Guest_" .. math.random(1000, 9999)
player.DisplayName = "Level 1"

-- Speed for Boat
for _, v in pairs(workspace:GetDescendants()) do
    if v:IsA("VehicleSeat") and v:IsDescendantOf(workspace) then
        v.MaxSpeed = 200
        v.Torque = 999999
    end
end

-- Auto Teleport to Player
function teleportToPlayer(targetName)
    local target = game.Players:FindFirstChild(targetName)
    if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
        player.Character.HumanoidRootPart.CFrame = target.Character.HumanoidRootPart.CFrame + Vector3.new(0, 3, 0)
    end
end

-- Anti Staff (Auto Leave if Staff Detected)
local staffList = {"Admin", "Moderator", "Staff"}
game.Players.PlayerAdded:Connect(function(plr)
    for _, role in pairs(staffList) do
        if string.find(string.lower(plr.Name), string.lower(role)) then
            game:Shutdown()
        end
    end
end)

-- CPU/FPS/Ping Booster
settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
game:GetService("Lighting").GlobalShadows = false
game:GetService("Lighting").FogEnd = 100000
game:GetService("Lighting").Brightness = 1
for _, v in pairs(workspace:GetDescendants()) do
    if v:IsA("Texture") or v:IsA("Decal") then
        v:Destroy()
    end
end

-- UI Wide Mode
Frame.Size = UDim2.new(0.6, 0, 0.6, 0)

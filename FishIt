--[[ 
 RakaHensem Utility V15 - FISH IT EDITION
 Khusus untuk game FISH IT
 Fitur: Ultra Recursive Scan untuk mendeteksi Totem di folder mana pun.
]]

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")

local Player = Players.LocalPlayer

-- // State
local TargetTotemName = nil 
local TotemIndex = 0
local Optimized = false
local Minimized = false
local AfkModeActive = false
local WowEnabled = false
local BV, Conn

-- // UI Config
local UI_WIDTH, UI_HEIGHT = 210, 245
local ACCENT = Color3.fromRGB(0, 255, 170)

-- // Cleanup
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

-- // UI Creation
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 20)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 35)
Header.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">FISH IT</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 11
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 45, 0, 22)
MinBtn.Position = UDim2.new(0.75, 0, 0.5, -11)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 50)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 9
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 4)

local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
ScrollFrame.Size = UDim2.new(1, -10, 1, -65)
ScrollFrame.Position = UDim2.new(0, 5, 0, 40)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 2
ScrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y

local Layout = Instance.new("UIListLayout", ScrollFrame)
Layout.Padding = UDim.new(0, 6)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

local function CreateButton(text)
    local btn = Instance.new("TextButton", ScrollFrame)
    btn.Size = UDim2.new(0.95, 0, 0, 35)
    btn.Text = text
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 10
    btn.TextColor3 = Color3.fromRGB(220, 220, 220)
    btn.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

-- Buttons
local PotatoBtn = CreateButton("POTATO MODE: OFF")
local WowBtn = CreateButton("WALK ON WATER: OFF")
local RenderBtn = CreateButton("AFK MODE (BLACK): OFF")
local TotemBtn = CreateButton("SEARCHING FISH IT TOTEMS...") 
local FpsCapBtn = CreateButton("FPS CAP: UNLIMITED")

local FpsDisplay = Instance.new("TextLabel", MainFrame)
FpsDisplay.Size = UDim2.new(1, 0, 0, 20)
FpsDisplay.Position = UDim2.new(0, 0, 1, -20)
FpsDisplay.BackgroundTransparency = 1
FpsDisplay.TextColor3 = ACCENT
FpsDisplay.Text = "FPS: --"
FpsDisplay.Font = Enum.Font.Code
FpsDisplay.TextSize = 10

-- // --- FISH IT ULTRA SCANNER --- //

local function FindTotemsInFishIt()
    local found = {}
    -- Scan secara mendalam di semua folder pemain
    for _, obj in pairs(Player:GetDescendants()) do
        if obj:IsA("Tool") and string.find(string.lower(obj.Name), "totem") then
            if not table.find(found, obj.Name) then
                table.insert(found, obj.Name)
            end
        end
    end
    -- Scan juga di karakter
    if Player.Character then
        for _, obj in pairs(Player.Character:GetChildren()) do
            if obj:IsA("Tool") and string.find(string.lower(obj.Name), "totem") then
                if not table.find(found, obj.Name) then
                    table.insert(found, obj.Name)
                end
            end
        end
    end
    return found
end

task.spawn(function()
    while task.wait(2) do
        if not TargetTotemName then
            local list = FindTotemsInFishIt()
            if #list > 0 then
                TotemBtn.Text = "FISH IT: " .. #list .. " TOTEMS READY"
                TotemBtn.TextColor3 = ACCENT
            else
                TotemBtn.Text = "NO TOTEMS (RE-SCANNING)"
                TotemBtn.TextColor3 = Color3.new(1,1,1)
            end
        end
    end
end)

-- // --- EXECUTION --- //

local function DeployTotem()
    if not TargetTotemName then return end
    local char = Player.Character
    if not char or not char:FindFirstChild("Humanoid") then return end

    -- Cari item di seluruh area pemain
    local tool = nil
    for _, obj in pairs(Player:GetDescendants()) do
        if obj.Name == TargetTotemName and obj:IsA("Tool") then
            tool = obj
            break
        end
    end
    
    if not tool and char then
        tool = char:FindFirstChild(TargetTotemName)
    end

    if tool then
        char.Humanoid:EquipTool(tool)
        task.wait(0.5)
        tool:Activate()
    end
end

-- Auto Loop 60m
task.spawn(function()
    while true do
        if TargetTotemName then
            DeployTotem()
            task.wait(3600)
        end
        task.wait(1)
    end
end)

TotemBtn.MouseButton1Click:Connect(function()
    local list = FindTotemsInFishIt()
    if #list == 0 then return end

    TotemIndex = TotemIndex + 1
    if TotemIndex > #list then
        TotemIndex = 0
        TargetTotemName = nil
        TotemBtn.Text = "AUTO TOTEM: OFF"
        TotemBtn.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
    else
        TargetTotemName = list[TotemIndex]
        TotemBtn.Text = "USE: " .. TargetTotemName:upper()
        TotemBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 100)
        DeployTotem()
    end
end)

-- // --- OTHERS --- //
local fpsLimits = {30, 60, 144, 999}; local curFpsIdx = 4
FpsCapBtn.MouseButton1Click:Connect(function()
    curFpsIdx = curFpsIdx + 1
    if curFpsIdx > #fpsLimits then curFpsIdx = 1 end
    local limit = fpsLimits[curFpsIdx]
    if setfpscap then setfpscap(limit) end
    FpsCapBtn.Text = (limit > 900) and "FPS CAP: UNLIMITED" or "FPS CAP: "..limit
end)

PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "POTATO: ON" or "POTATO: OFF"
    PotatoBtn.BackgroundColor3 = Optimized and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic; v.CastShadow = false
            elseif v:IsA("Texture") or v:IsA("Decal") then v.Transparency = 1 end
        end
    end
end)

RenderBtn.MouseButton1Click:Connect(function()
    AfkModeActive = not AfkModeActive
    RunService:Set3dRenderingEnabled(not AfkModeActive)
    RenderBtn.Text = AfkModeActive and "AFK BLACK: ON" or "AFK BLACK: OFF"
    RenderBtn.BackgroundColor3 = AfkModeActive and Color3.fromRGB(200, 50, 50) or Color3.fromRGB(35, 35, 40)
end)

WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = WowEnabled and "WOW: ON" or "WOW: OFF"
    WowBtn.BackgroundColor3 = WowEnabled and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)
    if WowEnabled then
        BV = Instance.new("BodyVelocity", Player.Character.HumanoidRootPart)
        BV.MaxForce = Vector3.new(0, 1e6, 0); BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if Player.Character:FindFirstChild("HumanoidRootPart") then
                Player.Character.HumanoidRootPart.AssemblyLinearVelocity = Vector3.new(Player.Character.HumanoidRootPart.AssemblyLinearVelocity.X, 0, Player.Character.HumanoidRootPart.AssemblyLinearVelocity.Z)
            end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    MainFrame:TweenSize(Minimized and UDim2.new(0, UI_WIDTH, 0, 35) or UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
    ScrollFrame.Visible = not Minimized; FpsDisplay.Visible = not Minimized
    MinBtn.Text = Minimized and "SHOW" or "HIDE"
end)

local lastT, frames = os.clock(), 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        FpsDisplay.Text = "FPS: " .. frames
        frames, lastT = 0, os.clock()
    end
end)

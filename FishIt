local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Player = Players.LocalPlayer

-- // UI SETUP
local function getUiParent()
    local playerGui = Player:FindFirstChild("PlayerGui")
    if playerGui then return playerGui end
    local success, core = pcall(function() return game:GetService("CoreGui") end)
    if success then return core end
    return nil
end

local ParentTarget = getUiParent()
if not ParentTarget then warn("Gagal menemukan tempat untuk UI!") return end

for _, child in pairs(ParentTarget:GetChildren()) do
    if child.Name == "SeraphinHelper" then child:Destroy() end
end

local Gui = Instance.new("ScreenGui")
Gui.Name = "SeraphinHelper"
Gui.Parent = ParentTarget
Gui.ResetOnSpawn = false
Gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- // UI Config
local UI_WIDTH = 240
local UI_HEIGHT = 450 -- Sedikit lebih panjang untuk menu baru
local ACCENT = Color3.fromRGB(0, 255, 170)

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 20)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 35)
Header.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 11
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 45, 0, 22)
MinBtn.Position = UDim2.new(0.75, 0, 0.5, -11)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 50)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 9
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 4)

-- Scrolling Content
local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
ScrollFrame.Size = UDim2.new(1, -10, 1, -60)
ScrollFrame.Position = UDim2.new(0, 5, 0, 40)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 2
ScrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
ScrollFrame.CanvasSize = UDim2.new(0,0,0,0)

local Layout = Instance.new("UIListLayout", ScrollFrame)
Layout.Padding = UDim.new(0, 6)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
Layout.SortOrder = Enum.SortOrder.LayoutOrder

local function CreateButton(text, layoutOrder)
    local btn = Instance.new("TextButton", ScrollFrame)
    btn.Size = UDim2.new(0.95, 0, 0, 35)
    btn.Text = text
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 10
    btn.TextColor3 = Color3.fromRGB(220, 220, 220)
    btn.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
    btn.LayoutOrder = layoutOrder or 0
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

-- // VARIABEL STATE
local SelectedTotemName = nil
local SelectedSellItem = nil
local TotemThread = nil
local SellThread = nil
local AutoTotemEnabled = false
local AutoSellEnabled = false
local Optimized = false
local Minimized = false

-- // FUNGSI PENCARI REMOTE
local CachedRemotes = {}
local function GetRemote(name)
    if CachedRemotes[name] then return CachedRemotes[name] end
    for _, v in pairs(ReplicatedStorage:GetDescendants()) do
        if v.Name == name then
            CachedRemotes[name] = v
            return v
        end
    end
    return nil
end

-- // [SYSTEM 1] TOTEM SCANNER
local TotemDropdownOpen = false
local TotemSelectorBtn = CreateButton("Pilih Totem: [None]", 1)
TotemSelectorBtn.TextColor3 = ACCENT

local TotemDropdownFrame = Instance.new("ScrollingFrame", ScrollFrame)
TotemDropdownFrame.Name = "TotemDropdownFrame"
TotemDropdownFrame.Size = UDim2.new(0.9, 0, 0, 0)
TotemDropdownFrame.BackgroundTransparency = 1
TotemDropdownFrame.ScrollBarThickness = 2
TotemDropdownFrame.LayoutOrder = 2
TotemDropdownFrame.Visible = false
Instance.new("UIListLayout", TotemDropdownFrame).Padding = UDim.new(0, 2)

local function RefreshTotemList()
    for _, child in pairs(TotemDropdownFrame:GetChildren()) do
        if child:IsA("TextButton") then child:Destroy() end
    end
    
    local path = ReplicatedStorage:FindFirstChild("Modules")
    if path then path = path:FindFirstChild("ModelDownloader") end
    if path then path = path:FindFirstChild("Collection") end
    if path then path = path:FindFirstChild("Totems") end
    
    if not path then return 0 end

    local items = path:GetChildren()
    for _, totem in pairs(items) do
        local choiceBtn = Instance.new("TextButton", TotemDropdownFrame)
        choiceBtn.Size = UDim2.new(1, 0, 0, 25)
        choiceBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 50)
        choiceBtn.TextColor3 = Color3.new(0.8, 0.8, 0.8)
        choiceBtn.Text = totem.Name
        choiceBtn.Font = Enum.Font.Gotham
        choiceBtn.TextSize = 10
        Instance.new("UICorner", choiceBtn).CornerRadius = UDim.new(0, 4)
        
        choiceBtn.MouseButton1Click:Connect(function()
            SelectedTotemName = totem.Name
            TotemSelectorBtn.Text = "Totem: " .. totem.Name
            TotemDropdownOpen = false
            TotemDropdownFrame.Visible = false
            TotemDropdownFrame.Size = UDim2.new(0.9, 0, 0, 0)
        end)
    end
    
    local contentHeight = #items * 27
    if contentHeight > 120 then contentHeight = 120 end
    TotemDropdownFrame.CanvasSize = UDim2.new(0, 0, 0, #items * 27)
    return contentHeight
end

TotemSelectorBtn.MouseButton1Click:Connect(function()
    TotemDropdownOpen = not TotemDropdownOpen
    if TotemDropdownOpen then
        local height = RefreshTotemList() or 100
        TotemDropdownFrame.Visible = true
        TotemDropdownFrame:TweenSize(UDim2.new(0.9, 0, 0, height), "Out", "Quad", 0.3, true)
    else
        TotemDropdownFrame:TweenSize(UDim2.new(0.9, 0, 0, 0), "Out", "Quad", 0.3, true)
        task.wait(0.3)
        TotemDropdownFrame.Visible = false
    end
end)

-- // [SYSTEM 2] SELL SCANNER & KEEP CONFIG
local SellDropdownOpen = false
local SellSelectorBtn = CreateButton("Pilih Item Jual: [None]", 3)
SellSelectorBtn.TextColor3 = Color3.fromRGB(255, 100, 100)

local SellDropdownFrame = Instance.new("ScrollingFrame", ScrollFrame)
SellDropdownFrame.Name = "SellDropdownFrame"
SellDropdownFrame.Size = UDim2.new(0.9, 0, 0, 0)
SellDropdownFrame.BackgroundTransparency = 1
SellDropdownFrame.ScrollBarThickness = 2
SellDropdownFrame.LayoutOrder = 4
SellDropdownFrame.Visible = false
Instance.new("UIListLayout", SellDropdownFrame).Padding = UDim.new(0, 2)

-- UI KEEP AMOUNT (Agar tidak terjual semua)
local KeepFrame = Instance.new("Frame", ScrollFrame)
KeepFrame.Size = UDim2.new(0.95, 0, 0, 30)
KeepFrame.BackgroundTransparency = 1
KeepFrame.LayoutOrder = 5

local KeepLabel = Instance.new("TextLabel", KeepFrame)
KeepLabel.Size = UDim2.new(0.6, 0, 1, 0)
KeepLabel.Text = "Sisakan (Keep):"
KeepLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
KeepLabel.Font = Enum.Font.GothamMedium
KeepLabel.TextSize = 11
KeepLabel.BackgroundTransparency = 1
KeepLabel.TextXAlignment = Enum.TextXAlignment.Left

local KeepBox = Instance.new("TextBox", KeepFrame)
KeepBox.Size = UDim2.new(0.35, 0, 1, 0)
KeepBox.Position = UDim2.new(0.65, 0, 0, 0)
KeepBox.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
KeepBox.TextColor3 = Color3.fromRGB(255, 200, 50)
KeepBox.Text = "1" -- Default sisakan 1
KeepBox.PlaceholderText = "0"
KeepBox.Font = Enum.Font.GothamBold
KeepBox.TextSize = 12
Instance.new("UICorner", KeepBox).CornerRadius = UDim.new(0, 6)

KeepBox:GetPropertyChangedSignal("Text"):Connect(function()
    KeepBox.Text = KeepBox.Text:gsub("%D+", "") -- Hanya angka
end)

local function AddSellButton(name)
    local choiceBtn = Instance.new("TextButton", SellDropdownFrame)
    choiceBtn.Size = UDim2.new(1, 0, 0, 25)
    choiceBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 50)
    choiceBtn.TextColor3 = Color3.new(0.8, 0.8, 0.8)
    choiceBtn.Text = name
    choiceBtn.Font = Enum.Font.Gotham
    choiceBtn.TextSize = 10
    Instance.new("UICorner", choiceBtn).CornerRadius = UDim.new(0, 4)
    choiceBtn.MouseButton1Click:Connect(function()
        SelectedSellItem = name
        SellSelectorBtn.Text = "Jual: " .. name
        SellDropdownOpen = false
        SellDropdownFrame.Visible = false
        SellDropdownFrame.Size = UDim2.new(0.9, 0, 0, 0)
    end)
end

local function RefreshSellList()
    for _, child in pairs(SellDropdownFrame:GetChildren()) do
        if child:IsA("TextButton") then child:Destroy() end
    end
    
    local foundItems = {}
    local itemCount = 0

    -- Scan Backpack pemain untuk melihat apa yang bisa dijual
    pcall(function()
        if Player.Backpack then
            for _, item in pairs(Player.Backpack:GetChildren()) do
                if item:IsA("Tool") and not foundItems[item.Name] then
                    AddSellButton(item.Name)
                    foundItems[item.Name] = true
                    itemCount = itemCount + 1
                end
            end
        end
    end)
    
    if itemCount == 0 then
        -- Jika backpack kosong/tidak ada tool, tambahkan default manual
        AddSellButton("Enchant Stone")
        AddSellButton("Train Wheel")
        itemCount = 2
    end
    
    local contentHeight = itemCount * 27
    if contentHeight > 150 then contentHeight = 150 end
    SellDropdownFrame.CanvasSize = UDim2.new(0, 0, 0, itemCount * 27)
    return contentHeight
end

SellSelectorBtn.MouseButton1Click:Connect(function()
    SellDropdownOpen = not SellDropdownOpen
    if SellDropdownOpen then
        local height = RefreshSellList() or 100
        SellDropdownFrame.Visible = true
        SellDropdownFrame:TweenSize(UDim2.new(0.9, 0, 0, height), "Out", "Quad", 0.3, true)
    else
        SellDropdownFrame:TweenSize(UDim2.new(0.9, 0, 0, 0), "Out", "Quad", 0.3, true)
        task.wait(0.3)
        SellDropdownFrame.Visible = false
    end
end)

-- // BUTTONS UTAMA
local TotemBtn = CreateButton("Auto Totem (60m): OFF", 6)
local SellBtn = CreateButton("Auto Sell (Selective): OFF", 7)
local PotatoBtn = CreateButton("Booster Mode: OFF", 8)

-- // LOGIKA AUTO SELL (SAFEGUARD MODE)
SellBtn.MouseButton1Click:Connect(function()
    if not SelectedSellItem then
        game:GetService("StarterGui"):SetCore("SendNotification", {Title = "Seraphin Helper"; Text = "Pilih Item Jual dulu (Scan)!"; Duration = 3;})
        return
    end

    AutoSellEnabled = not AutoSellEnabled
    SellBtn.Text = AutoSellEnabled and "Auto Sell: ON" or "Auto Sell (Selective): OFF"
    SellBtn.BackgroundColor3 = AutoSellEnabled and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)

    if AutoSellEnabled then
        SellThread = task.spawn(function()
            while AutoSellEnabled do
                task.wait(1) -- Cek setiap 1 detik
                pcall(function()
                    -- 1. Setup Remote
                    local packagePath = ReplicatedStorage:FindFirstChild("Packages") and ReplicatedStorage.Packages:FindFirstChild("_Index")
                    local sleitnick = packagePath and packagePath:FindFirstChild("sleitnick_net@0.2.0")
                    local sellRemote = sleitnick and sleitnick:FindFirstChild("net") and sleitnick.net:FindFirstChild("RF/SellItem")

                    if not sellRemote then return end

                    -- 2. Kumpulkan Item yang cocok
                    local itemsToProcess = {}
                    local backpack = Player.Backpack
                    
                    for _, tool in pairs(backpack:GetChildren()) do
                        if tool.Name == SelectedSellItem then
                            table.insert(itemsToProcess, tool)
                        end
                    end

                    -- 3. Logika "Sisakan" (Keep Amount)
                    local keepAmount = tonumber(KeepBox.Text) or 0
                    local totalItems = #itemsToProcess
                    local amountToSell = totalItems - keepAmount

                    if amountToSell > 0 then
                        -- Jual hanya sebanyak (Total - Keep)
                        -- Loop dari 1 sampai amountToSell
                        for i = 1, amountToSell do
                            if not AutoSellEnabled then break end
                            
                            local targetItem = itemsToProcess[i]
                            if targetItem then
                                -- Cari UUID
                                local uuid = targetItem:GetAttribute("UUID") or targetItem:GetAttribute("uuid") or targetItem:GetAttribute("id")
                                if not uuid then
                                    local val = targetItem:FindFirstChild("UUID") or targetItem:FindFirstChild("ID")
                                    if val then uuid = val.Value end
                                end

                                if uuid then
                                    -- Kirim Remote
                                    sellRemote:InvokeServer(uuid)
                                    print("Menjual: " .. targetItem.Name .. " (Sisa target: " .. keepAmount .. ")")
                                    task.wait(0.2) -- Delay kecil agar tidak spam parah
                                end
                            end
                        end
                    else
                        -- Jika jumlah item sudah <= jumlah yang ingin disisakan
                        -- Tidak melakukan apa-apa (Standby)
                    end
                end)
            end
        end)
    else
        if SellThread then task.cancel(SellThread) end
    end
end)

-- LOGIKA AUTO TOTEM
TotemBtn.MouseButton1Click:Connect(function()
    if not SelectedTotemName then
        game:GetService("StarterGui"):SetCore("SendNotification", {Title = "Seraphin Helper"; Text = "Pilih Totem dulu!"; Duration = 3;})
        return
    end

    AutoTotemEnabled = not AutoTotemEnabled
    TotemBtn.Text = AutoTotemEnabled and "Auto Totem: ON" or "Auto Totem: OFF"
    TotemBtn.BackgroundColor3 = AutoTotemEnabled and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)

    if AutoTotemEnabled then
        TotemThread = task.spawn(function()
            while AutoTotemEnabled do
                pcall(function()
                    local equipEvent = GetRemote("EquipItem")
                    local spawnEvent = GetRemote("SpawnTotem")
                    local args = { [1] = SelectedTotemName }
                    
                    if equipEvent then 
                        if equipEvent:IsA("RemoteFunction") then equipEvent:InvokeServer(unpack(args))
                        else equipEvent:FireServer(unpack(args)) end
                    end
                    task.wait(0.5)
                    if spawnEvent then 
                        if spawnEvent:IsA("RemoteFunction") then spawnEvent:InvokeServer(unpack(args))
                        else spawnEvent:FireServer(unpack(args)) end
                    end
                end)
                -- Timer mundur
                for i = 3600, 1, -1 do
                    if not AutoTotemEnabled then break end
                    task.wait(1)
                end
            end
        end)
    else
        if TotemThread then task.cancel(TotemThread) end
    end
end)

-- OPTIMIZATION
PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "Booster Mode: ON" or "Booster Mode: OFF"
    PotatoBtn.BackgroundColor3 = Optimized and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic; v.CastShadow = false
            elseif v:IsA("Texture") or v:IsA("Decal") then v.Transparency = 1
            elseif v:IsA("ParticleEmitter") then v.Enabled = false end
        end
    end
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 35), "Out", "Quad", 0.3, true); ScrollFrame.Visible = false; MinBtn.Text = "SHOW"
    else MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true); task.wait(0.2); ScrollFrame.Visible = true; MinBtn.Text = "HIDE" end
end)

game:GetService("StarterGui"):SetCore("SendNotification", {Title = "Seraphin Helper", Text = "Remote Sell Ready!", Duration = 5})

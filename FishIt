local function CreateStatLabel(order, text)
    local lbl = Instance.new("TextLabel", FloatHUD)
    lbl.Size = UDim2.new(1, -10, 0, 22)
    lbl.BackgroundTransparency = 1
    lbl.Text = text
    lbl.TextColor3 = UI_CONFIG.TextColor
    lbl.Font = UI_CONFIG.Font
    lbl.TextSize = 14
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    lbl.LayoutOrder = order
    lbl.RichText = true
    return lbl
end

local LblFish = CreateStatLabel(1, "üêü Fish Caught : Loading...")
local LblBag  = CreateStatLabel(2, "üéí Inventory   : Loading...")
local LblStuck = CreateStatLabel(3, "üü¢ Status      : Normal")

-- ==========================================
-- [2] MAIN MENU
-- ==========================================
local Main = Instance.new("Frame", ScreenGui)
Main.Name = "Main"

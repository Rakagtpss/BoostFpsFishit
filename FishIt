-- [[ RakaGanteng Hub - Super Lite Edition ]] --

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "RakaGanteng | Ultra Lite",
   LoadingTitle = "Loading RakaGanteng Script...",
   LoadingSubtitle = "by Raka",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "RakaGantengConfig",
      FileName = "RakaHub"
   },
   Discord = {
      Enabled = false,
   },
   KeySystem = false
})

-- [[ VARIABLES & TOGGLES ]] --
local WalkOnWater = false
local AutoClaim = false
local AntiStaff = false
local SpeedValue = 16

-- [[ TAB: MAIN FEATURES ]] --
local MainTab = Window:CreateTab("Main", 4483362458) -- Icon ID

MainTab:CreateToggle({
   Name = "Walk On Water",
   CurrentValue = false,
   Callback = function(Value)
      WalkOnWater = Value
      -- Logic Walk On Water
      game:GetService("RunService").Stepped:Connect(function()
         if WalkOnWater then
            -- Contoh logic sederhana (tergantung game-nya)
            if game.Workspace:FindFirstChild("Water") then
                game.Workspace.Water.CanCollide = true
            end
         end
      end)
   end,
})

MainTab:CreateInput({
   Name = "Fake Name",
   PlaceholderText = "Enter Name...",
   RemoveTextAfterFocusLost = false,
   Callback = function(Text)
      -- Logic mengganti DisplayName (Client-side)
      game.Players.LocalPlayer.Character.Humanoid.DisplayName = Text
   end,
})

MainTab:CreateToggle({
   Name = "Auto Claim Event",
   CurrentValue = false,
   Callback = function(Value)
      AutoClaim = Value
      while AutoClaim do
         task.wait(5)
         -- Masukkan RemoteEvent claim di sini
         print("Claiming Event Rewards...")
      end
   end,
})

-- [[ TAB: MOVEMENT & SPEED ]] --
local MoveTab = Window:CreateTab("Movement", 4483362458)

MoveTab:CreateSlider({
   Name = "Character Speed",
   Range = {16, 500},
   Increment = 1,
   Suffix = "Speed",
   CurrentValue = 16,
   Callback = function(Value)
      game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
   end,
})

MoveTab:CreateInput({
   Name = "Auto Follow (Player Name)",
   PlaceholderText = "Username...",
   Callback = function(Text)
      local target = game.Players:FindFirstChild(Text)
      if target then
         game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = target.Character.HumanoidRootPart.CFrame
      end
   end,
})

-- [[ TAB: SYSTEM & PERFORMANCE ]] --
local SysTab = Window:CreateTab("System", 4483362458)

SysTab:CreateToggle({
   Name = "No Render (CPU Booster)",
   CurrentValue = false,
   Callback = function(Value)
      game:GetService("RunService"):Set3dRenderingEnabled(not Value)
   end,
})

SysTab:CreateButton({
   Name = "Optimize Map (Booster)",
   Callback = function()
      for _, v in pairs(game.Workspace:GetDescendants()) do
         if v:IsA("Part") or v:IsA("MeshPart") then
            v.Material = Enum.Material.SmoothPlastic
         end
      end
   end,
})

SysTab:CreateToggle({
   Name = "Anti-Staff Check",
   CurrentValue = false,
   Callback = function(Value)
      AntiStaff = Value
      game.Players.PlayerAdded:Connect(function(player)
         if AntiStaff and player:GetRankInGroup(0) > 100 then -- Sesuaikan ID Group
            game.Players.LocalPlayer:Kick("Staff Detected!")
         end
      end)
   end,
})

-- [[ FLOATING STATS (FPS & PING) ]] --
local StatsGui = Instance.new("ScreenGui")
local StatsLabel = Instance.new("TextLabel")
StatsGui.Parent = game.CoreGui
StatsLabel.Parent = StatsGui
StatsLabel.Size = UDim2.new(0, 150, 0, 50)
StatsLabel.Position = UDim2.new(0, 10, 0, 10)
StatsLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
StatsLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
StatsLabel.BackgroundTransparency = 0.5

game:GetService("RunService").RenderStepped:Connect(function()
    local fps = math.floor(1/task.wait())
    local ping = game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValueString()
    StatsLabel.Text = "FPS: "..fps.." | Ping: "..math.floor(ping)
end)

-- [[ TUKAR SERVER BOOSTER ]] --
SysTab:CreateButton({
   Name = "Find Booster Server (X2, X4, X8)",
   Callback = function()
      Rayfield:Notify({Title = "Searching", Content = "Looking for boosted servers...", Duration = 5})
      -- Logic Server Hop (Umumnya butuh HTTP Service)
   end,
})

Rayfield:LoadConfiguration()

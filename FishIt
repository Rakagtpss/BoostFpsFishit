FloatHUD.Name = "FloatingFish"
-- Ukuran diperlebar sedikit agar teks muat (210px)
FloatHUD.Size = UDim2.new(0, 210, 0, 85) 
FloatHUD.Position = UDim2.new(0.82, 0, 0.3, 0)
FloatHUD.BackgroundColor3 = UI_CONFIG.StatsColor
FloatHUD.BackgroundTransparency = 0.15
FloatHUD.Visible = true
FloatHUD.Active = true
FloatHUD.Draggable = true 

-- Stroke Outline HUD
local HudStroke = Instance.new("UIStroke", FloatHUD)
HudStroke.Color = UI_CONFIG.Accent
HudStroke.Thickness = 1.2
HudStroke.Transparency = 0.4

-- Rounded Corner
Instance.new("UICorner", FloatHUD).CornerRadius = UDim.new(0, 6)

-- Layout List
local ListLayout = Instance.new("UIListLayout", FloatHUD)
ListLayout.FillDirection = Enum.FillDirection.Vertical
ListLayout.Padding = UDim.new(0, 2) 
ListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left -- Rata Kiri biar rapi
ListLayout.VerticalAlignment = Enum.VerticalAlignment.Center

-- Padding Internal Container (Penting agar teks tidak nempel pinggir)
local Padding = Instance.new("UIPadding", FloatHUD)
Padding.PaddingTop = UDim.new(0, 8)
Padding.PaddingBottom = UDim.new(0, 8)
Padding.PaddingLeft = UDim.new(0, 12) -- Jarak dari kiri
Padding.PaddingRight = UDim.new(0, 5)

-- FUNGSI PEMBUAT BARIS (ROW) DIPERBAIKI
local function CreateRow(text, isHeader)
    local lbl = Instance.new("TextLabel", FloatHUD)
    lbl.Size = UDim2.new(1, 0, 0, isHeader and 20 or 18) 
    lbl.BackgroundTransparency = 1
    lbl.Text = text
    lbl.Font = UI_CONFIG.Font
    lbl.RichText = true
    lbl.TextXAlignment = Enum.TextXAlignment.Left -- Teks Rata Kiri
    
    if isHeader then
        lbl.TextColor3 = UI_CONFIG.Accent
        lbl.TextSize = 13
        lbl.TextStrokeTransparency = 0.8
    else
        lbl.TextColor3 = UI_CONFIG.TextColor
        lbl.TextSize = 12
        lbl.TextTransparency = 0.1
    end
    return lbl
end

-- ISI HUD
local LblTitle       = CreateRow("SERAPHIN STATS", true)
local Div            = Instance.new("Frame", FloatHUD) -- Garis Pemisah
Div.Size             = UDim2.new(0.6, 0, 0, 1) -- Panjang garis 60%
Div.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
Div.BorderSizePixel  = 0
local LblInv         = CreateRow("Fish: ...", false)
local LblCaught      = CreateRow("Caught: ...", false)

-- ====================================================

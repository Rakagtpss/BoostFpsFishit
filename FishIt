--[[ 
 RakaGanteng UI - Final V8 (FIXED LAYOUT)
 Tema: Classic Navy Light
]]

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Lighting = game:GetService("Lighting")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")
local Humanoid = Char:WaitForChild("Humanoid")

-- State
local WOW_Enabled = false
local NoRender_Enabled = false
local ReduceMap_Enabled = false
local IsMinimized = false

local BV
local Conn
local OldShadows = Lighting.GlobalShadows

-- UI Core
local Gui = Instance.new("ScreenGui", game.CoreGui)
Gui.Name = "RakaGanteng_V8"

-- Tombol Minimize
local MinBtn = Instance.new("TextButton", Gui)
MinBtn.Size = UDim2.new(0, 35, 0, 35)
MinBtn.Position = UDim2.new(0, 15, 0.5, -17)
MinBtn.BackgroundColor3 = Color3.fromRGB(0, 35, 70)
MinBtn.Text = "R"
MinBtn.Font = Enum.Font.SourceSansBold
MinBtn.TextColor3 = Color3.new(1,1,1)
MinBtn.TextSize = 18
MinBtn.Draggable = true
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 8)
Instance.new("UIStroke", MinBtn).Color = Color3.fromRGB(0, 80, 150)

-- Main Frame
local Frame = Instance.new("Frame", Gui)
Frame.Size = UDim2.new(0, 170, 0, 0) -- Tinggi otomatis
Frame.Position = UDim2.new(0.5, -85, 0.4, 0)
Frame.BackgroundColor3 = Color3.fromRGB(0, 20, 40)
Frame.Active = true
Frame.Draggable = true
Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 5)
Instance.new("UIStroke", Frame).Color = Color3.fromRGB(0, 50, 100)

-- SISTEM LAYOUT TERATUR
local Padding = Instance.new("UIPadding", Frame)
Padding.PaddingTop = UDim.new(0, 10)
Padding.PaddingBottom = UDim.new(0, 10)

local List = Instance.new("UIListLayout", Frame)
List.HorizontalAlignment = Enum.HorizontalAlignment.Center
List.SortOrder = Enum.SortOrder.LayoutOrder
List.Padding = UDim.new(0, 8)

-- Menyesuaikan tinggi frame dengan isi secara otomatis
Frame.AutomaticSize = Enum.AutomaticSize.Y 

-- FPS Display
local FPSDisplay = Instance.new("TextLabel", Frame)
FPSDisplay.Size = UDim2.new(1, 0, 0, 15)
FPSDisplay.BackgroundTransparency = 1
FPSDisplay.Text = "FPS: ..."
FPSDisplay.TextColor3 = Color3.fromRGB(150, 200, 255)
FPSDisplay.Font = Enum.Font.Code
FPSDisplay.TextSize = 15
FPSDisplay.LayoutOrder = 1

-- Title
local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, 0, 0, 25)
Title.BackgroundTransparency = 1
Title.Text = "RAKA GANTENG V8"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 15
Title.LayoutOrder = 2

-- Function: Create Button
local function CreateButton(text, order)
    local Btn = Instance.new("TextButton", Frame)
    Btn.Size = UDim2.new(0, 150, 0, 32)
    Btn.Text = text
    Btn.Font = Enum.Font.SourceSansBold
    Btn.TextColor3 = Color3.new(1, 1, 1)
    Btn.BackgroundColor3 = Color3.fromRGB(0, 45, 90)
    Btn.LayoutOrder = order
    Instance.new("UICorner", Btn).CornerRadius = UDim.new(0, 4)
    return Btn
end

local BtnWOW = CreateButton("Water Walk: OFF", 3)
local BtnRender = CreateButton("No Render: OFF", 4)
local BtnReduce = CreateButton("Reduce Map: OFF", 5)

-- FPS Lock Section
local LabelFPS = Instance.new("TextLabel", Frame)
LabelFPS.Size = UDim2.new(1, 0, 0, 20)
LabelFPS.Text = "[ SELECT FPS CAP ]"
LabelFPS.TextColor3 = Color3.fromRGB(100, 150, 200)
LabelFPS.Font = Enum.Font.SourceSansBold
LabelFPS.TextSize = 10
LabelFPS.BackgroundTransparency = 1
LabelFPS.LayoutOrder = 6

local FPSContainer = Instance.new("Frame", Frame)
FPSContainer.Size = UDim2.new(0, 150, 0, 60)
FPSContainer.BackgroundTransparency = 1
FPSContainer.LayoutOrder = 7

local Grid = Instance.new("UIGridLayout", FPSContainer)
Grid.CellSize = UDim2.new(0, 45, 0, 25)
Grid.CellPadding = UDim2.new(0, 7, 0, 7)
Grid.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- FPS Buttons Logic
local function CreateFPSBtn(val)
    local Btn = Instance.new("TextButton", FPSContainer)
    Btn.Text = tostring(val)
    Btn.Font = Enum.Font.SourceSansBold
    Btn.BackgroundColor3 = Color3.fromRGB(0, 30, 60)
    Btn.TextColor3 = Color3.new(1,1,1)
    Instance.new("UICorner", Btn).CornerRadius = UDim.new(0, 2)
    
    Btn.MouseButton1Click:Connect(function()
        for _, v in pairs(FPSContainer:GetChildren()) do
            if v:IsA("TextButton") then v.BackgroundColor3 = Color3.fromRGB(0, 30, 60) end
        end
        Btn.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
        if setfpscap then pcall(function() setfpscap(val) end) end
    end)
end

for _, v in ipairs({30, 60, 90, 120, 220}) do CreateFPSBtn(v) end

-- Logic Minimize
MinBtn.MouseButton1Click:Connect(function()
    IsMinimized = not IsMinimized
    Frame.Visible = not IsMinimized
    MinBtn.Text = IsMinimized and "+" or "-"
end)

-- FPS Counter
local LastTick = tick()
local Frames = 0
RunService.Heartbeat:Connect(function()
    Frames = Frames + 1
    if tick() - LastTick >= 1 then
        FPSDisplay.Text = "FPS: " .. Frames
        Frames = 0
        LastTick = tick()
    end
end)

-- Feature Logics (WOW, Render, Reduce Map)
BtnWOW.MouseButton1Click:Connect(function()
    WOW_Enabled = not WOW_Enabled
    BtnWOW.Text = WOW_Enabled and "Water Walk: ON" or "Water Walk: OFF"
    BtnWOW.BackgroundColor3 = WOW_Enabled and Color3.fromRGB(0, 100, 200) or Color3.fromRGB(0, 45, 90)
    if WOW_Enabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Humanoid:ChangeState(Enum.HumanoidStateType.Running)
        Conn = RunService.Heartbeat:Connect(function()
            if WOW_Enabled and HRP then
                HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z)
            end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

BtnRender.MouseButton1Click:Connect(function()
    NoRender_Enabled = not NoRender_Enabled
    RunService:Set3dRenderingEnabled(not NoRender_Enabled)
    BtnRender.Text = NoRender_Enabled and "No Render: ON" or "No Render: OFF"
    BtnRender.BackgroundColor3 = NoRender_Enabled and Color3.fromRGB(0, 100, 200) or Color3.fromRGB(0, 45, 90)
end)

BtnReduce.MouseButton1Click:Connect(function()
    ReduceMap_Enabled = not ReduceMap_Enabled
    BtnReduce.Text = ReduceMap_Enabled and "Reduce Map: ON" or "Reduce Map: OFF"
    BtnReduce.BackgroundColor3 = ReduceMap_Enabled and Color3.fromRGB(0, 100, 200) or Color3.fromRGB(0, 45, 90)
    if ReduceMap_Enabled then
        settings().Rendering.QualityLevel = 1
        Lighting.GlobalShadows = false
        for _, v in pairs(workspace:GetDescendants()) do
            if v:IsA("BasePart") and not v.Parent:FindFirstChild("Humanoid") then
                v.Material = Enum.Material.SmoothPlastic
            elseif v:IsA("Texture") or v:IsA("Decal") or v:IsA("ParticleEmitter") then
                pcall(function() v.Enabled = false v.Transparency = 1 end)
            end
        end
    else
        Lighting.GlobalShadows = OldShadows
    end
end)

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")
local Lighting = game:GetService("Lighting")
local Player = Players.LocalPlayer

-- // 1. UI CLEANUP & SETUP
local function getUiParent()
    local playerGui = Player:FindFirstChild("PlayerGui")
    if playerGui then return playerGui end
    local success, core = pcall(function() return game:GetService("CoreGui") end)
    if success then return core end
    return nil
end

local ParentTarget = getUiParent()
if not ParentTarget then warn("UI Parent Gagal") return end

for _, child in pairs(ParentTarget:GetChildren()) do
    if child.Name == "SeraphinSimple" then child:Destroy() end
end

-- // CONFIG UI
local UI_WIDTH = 250
local UI_HEIGHT = 450 -- Sedikit lebih tinggi untuk muat tombol baru
local THEME = {
    Bg = Color3.fromRGB(20, 21, 24),
    Item = Color3.fromRGB(35, 35, 40),
    Text = Color3.fromRGB(230, 230, 230),
    Accent = Color3.fromRGB(0, 255, 170),
}

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "SeraphinSimple"
ScreenGui.Parent = ParentTarget
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = THEME.Bg
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

-- HEADER
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 40)
Header.BackgroundColor3 = THEME.Item
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">FULL</font>"
Title.RichText = true
Title.TextColor3 = THEME.Text
Title.Font = Enum.Font.GothamBold
Title.TextSize = 12
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 50, 0, 24)
MinBtn.Position = UDim2.new(0.75, 0, 0.5, -12)
MinBtn.Text = "HIDE"
MinBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
MinBtn.TextColor3 = THEME.Text
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 10
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 4)

-- SCROLL CONTAINER
local Scroll = Instance.new("ScrollingFrame", MainFrame)
Scroll.Size = UDim2.new(1, -10, 1, -50)
Scroll.Position = UDim2.new(0, 5, 0, 45)
Scroll.BackgroundTransparency = 1
Scroll.ScrollBarThickness = 2
Scroll.CanvasSize = UDim2.new(0, 0, 1.2, 0) -- Extra space
local Layout = Instance.new("UIListLayout", Scroll)
Layout.Padding = UDim.new(0, 6)
Layout.SortOrder = Enum.SortOrder.LayoutOrder
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- // HELPER FUNCTIONS
local function CreateButton(text, layout)
    local btn = Instance.new("TextButton", Scroll)
    btn.Size = UDim2.new(0.95, 0, 0, 35)
    btn.BackgroundColor3 = THEME.Item
    btn.Text = text
    btn.TextColor3 = THEME.Text
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 11
    btn.LayoutOrder = layout or 0
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

local function GetUUID(tool)
    if not tool then return nil end
    local uuid = tool:GetAttribute("UUID") or tool:GetAttribute("uuid") or tool:GetAttribute("id")
    if uuid then return uuid end
    local val = tool:FindFirstChild("UUID") or tool:FindFirstChild("ID") or tool:FindFirstChild("uuid")
    if val then return val.Value end
    local conf = tool:FindFirstChild("Configuration") or tool:FindFirstChild("Config")
    if conf then
        val = conf:FindFirstChild("UUID") or conf:FindFirstChild("ID")
        if val then return val.Value end
    end
    return nil
end

-- // VARIABLES
local SelectedSellItem = nil
local SelectedTotem = nil
local AutoSellEnabled = false
local AutoTotemEnabled = false
local WoWEnabled = false
local KeepAmount = 1

-- // [1] SCAN & SELECT SYSTEM
local SellStatus = CreateButton("Pilih Item Jual: [None]", 1)
SellStatus.TextColor3 = THEME.Accent

local DropdownFrame = Instance.new("ScrollingFrame", Scroll)
DropdownFrame.Size = UDim2.new(0.95, 0, 0, 0)
DropdownFrame.BackgroundTransparency = 1
DropdownFrame.LayoutOrder = 2
DropdownFrame.Visible = false
Instance.new("UIListLayout", DropdownFrame).Padding = UDim.new(0, 2)

local function RefreshList()
    for _, v in pairs(DropdownFrame:GetChildren()) do if v:IsA("TextButton") then v:Destroy() end end
    
    local count = 0
    local found = {}
    
    local function Add(name)
        if found[name] then return end
        found[name] = true
        count = count + 1
        
        local b = Instance.new("TextButton", DropdownFrame)
        b.Size = UDim2.new(1, 0, 0, 25)
        b.BackgroundColor3 = Color3.fromRGB(45, 45, 50)
        b.Text = name
        b.TextColor3 = Color3.fromRGB(200, 200, 200)
        b.Font = Enum.Font.Gotham
        b.TextSize = 10
        Instance.new("UICorner", b).CornerRadius = UDim.new(0, 4)
        
        b.MouseButton1Click:Connect(function()
            SelectedSellItem = name
            SellStatus.Text = "Jual: " .. name
            DropdownFrame:TweenSize(UDim2.new(0.95, 0, 0, 0), "Out", "Quad", 0.2, true)
            task.wait(0.2)
            DropdownFrame.Visible = false
        end)
    end
    
    pcall(function()
        local gears = ReplicatedStorage.Modules.ModelDownloader.Collection.Gears
        for _, v in pairs(gears:GetChildren()) do Add(v.Name) end
    end)
    Add("Enchant Stone"); Add("Train Wheel")
    
    DropdownFrame.CanvasSize = UDim2.new(0, 0, 0, count * 27)
    return math.min(count * 27, 150)
end

SellStatus.MouseButton1Click:Connect(function()
    if DropdownFrame.Visible then
        DropdownFrame:TweenSize(UDim2.new(0.95, 0, 0, 0), "Out", "Quad", 0.2, true)
        task.wait(0.2)
        DropdownFrame.Visible = false
    else
        local h = RefreshList()
        DropdownFrame.Visible = true
        DropdownFrame:TweenSize(UDim2.new(0.95, 0, 0, h), "Out", "Quad", 0.2, true)
    end
end)

-- // [2] KEEP AMOUNT
local KeepFrame = Instance.new("Frame", Scroll)
KeepFrame.Size = UDim2.new(0.95, 0, 0, 30)
KeepFrame.BackgroundTransparency = 1
KeepFrame.LayoutOrder = 3

local KeepLbl = Instance.new("TextLabel", KeepFrame)
KeepLbl.Size = UDim2.new(0.6, 0, 1, 0)
KeepLbl.Text = "Sisakan (Keep):"
KeepLbl.TextColor3 = Color3.fromRGB(180, 180, 180)
KeepLbl.Font = Enum.Font.GothamMedium
KeepLbl.TextSize = 11
KeepLbl.BackgroundTransparency = 1
KeepLbl.TextXAlignment = Enum.TextXAlignment.Left

local KeepBox = Instance.new("TextBox", KeepFrame)
KeepBox.Size = UDim2.new(0.35, 0, 1, 0)
KeepBox.Position = UDim2.new(0.65, 0, 0, 0)
KeepBox.BackgroundColor3 = THEME.Item
KeepBox.TextColor3 = THEME.Accent
KeepBox.Text = "1"
KeepBox.Font = Enum.Font.GothamBold
KeepBox.TextSize = 12
Instance.new("UICorner", KeepBox).CornerRadius = UDim.new(0, 4)

KeepBox:GetPropertyChangedSignal("Text"):Connect(function()
    KeepBox.Text = KeepBox.Text:gsub("%D+", "")
    KeepAmount = tonumber(KeepBox.Text) or 1
end)

-- // [3] FEATURE BUTTONS
local ToggleSell = CreateButton("Auto Sell: OFF", 4)
local ToggleTotem = CreateButton("Auto Totem: OFF", 5)
local ToggleWoW = CreateButton("Walk on Water: OFF", 6)
local ToggleNoRender = CreateButton("No Render (3D): OFF", 7)
local ToggleBooster = CreateButton("Booster (FPS): OFF", 8)

-- 1. AUTO SELL (FIXED)
ToggleSell.MouseButton1Click:Connect(function()
    if not SelectedSellItem then
        ToggleSell.Text = "Pilih Item Dulu!"
        task.wait(1)
        ToggleSell.Text = "Auto Sell: OFF"
        return
    end
    AutoSellEnabled = not AutoSellEnabled
    if AutoSellEnabled then
        ToggleSell.Text = "Auto Sell: ON"
        ToggleSell.BackgroundColor3 = THEME.Accent
        ToggleSell.TextColor3 = Color3.new(0,0,0)
        
        task.spawn(function()
            while AutoSellEnabled do
                task.wait(1.5)
                pcall(function()
                    local remote = ReplicatedStorage.Packages._Index["sleitnick_net@0.2.0"].net["RF/SellItem"]
                    local toSell = {}
                    if Player.Backpack then
                        for _,v in pairs(Player.Backpack:GetChildren()) do
                            if v.Name == SelectedSellItem then table.insert(toSell, v) end
                        end
                    end
                    if Player.Character then
                        for _,v in pairs(Player.Character:GetChildren()) do
                            if v:IsA("Tool") and v.Name == SelectedSellItem then table.insert(toSell, v) end
                        end
                    end
                    
                    local amount = #toSell - KeepAmount
                    if amount > 0 then
                        for i = 1, amount do
                            if not AutoSellEnabled then break end
                            local item = toSell[i]
                            local uuid = GetUUID(item)
                            if uuid then
                                remote:InvokeServer(uuid, 1)
                                print("Sold: "..item.Name)
                                task.wait(0.1)
                            end
                        end
                    end
                end)
            end
        end)
    else
        ToggleSell.Text = "Auto Sell: OFF"
        ToggleSell.BackgroundColor3 = THEME.Item
        ToggleSell.TextColor3 = THEME.Text
    end
end)

-- 2. AUTO TOTEM
ToggleTotem.MouseButton1Click:Connect(function()
    AutoTotemEnabled = not AutoTotemEnabled
    if AutoTotemEnabled then
        ToggleTotem.Text = "Auto Totem: ON"
        ToggleTotem.BackgroundColor3 = THEME.Accent
        ToggleTotem.TextColor3 = Color3.new(0,0,0)
        if not SelectedTotem then
            pcall(function() 
                local t = ReplicatedStorage.Modules.ModelDownloader.Collection.Totems:GetChildren()
                if t[1] then SelectedTotem = t[1].Name end 
            end)
        end
        task.spawn(function()
            while AutoTotemEnabled do
                pcall(function()
                    local remote = ReplicatedStorage.Packages._Index["sleitnick_net@0.2.0"].net["RE/PlaceCavernTotemItem"]
                    if SelectedTotem then
                        local tool = Player.Backpack:FindFirstChild(SelectedTotem) or (Player.Character and Player.Character:FindFirstChild(SelectedTotem))
                        if tool then
                            local uuid = GetUUID(tool)
                            if uuid then remote:FireServer(uuid) end
                        end
                    end
                end)
                for i=1, 3600 do if not AutoTotemEnabled then break end task.wait(1) end
            end
        end)
    else
        ToggleTotem.Text = "Auto Totem: OFF"
        ToggleTotem.BackgroundColor3 = THEME.Item
        ToggleTotem.TextColor3 = THEME.Text
    end
end)

-- 3. WALK ON WATER (RESTORED)
local wowPart = nil
ToggleWoW.MouseButton1Click:Connect(function()
    WoWEnabled = not WoWEnabled
    if WoWEnabled then
        ToggleWoW.Text = "Walk on Water: ON"
        ToggleWoW.BackgroundColor3 = THEME.Accent
        ToggleWoW.TextColor3 = Color3.new(0,0,0)
        
        -- Logic WoW
        task.spawn(function()
            while WoWEnabled do
                pcall(function()
                    if Player.Character and Player.Character:FindFirstChild("HumanoidRootPart") then
                        if not wowPart then
                            wowPart = Instance.new("Part", workspace)
                            wowPart.Name = "SeraphinPlatform"
                            wowPart.Size = Vector3.new(10, 1, 10)
                            wowPart.Transparency = 0.5
                            wowPart.Anchored = true
                            wowPart.CanCollide = true
                        end
                        -- Posisi di bawah kaki karakter
                        local hrp = Player.Character.HumanoidRootPart
                        wowPart.CFrame = CFrame.new(hrp.Position.X, hrp.Position.Y - 3.5, hrp.Position.Z)
                    end
                end)
                RunService.Heartbeat:Wait()
            end
            -- Cleanup saat mati
            if wowPart then wowPart:Destroy(); wowPart = nil end
        end)
    else
        ToggleWoW.Text = "Walk on Water: OFF"
        ToggleWoW.BackgroundColor3 = THEME.Item
        ToggleWoW.TextColor3 = THEME.Text
        if wowPart then wowPart:Destroy(); wowPart = nil end
    end
end)

-- 4. NO RENDER (RESTORED)
local noRender = false
ToggleNoRender.MouseButton1Click:Connect(function()
    noRender = not noRender
    if noRender then
        ToggleNoRender.Text = "No Render (3D): ON"
        ToggleNoRender.BackgroundColor3 = THEME.Accent
        ToggleNoRender.TextColor3 = Color3.new(0,0,0)
        RunService:Set3dRenderingEnabled(false)
        game.StarterGui:SetCore("SendNotification", {Title="No Render", Text="Layar beku untuk hemat RAM/CPU", Duration=3})
    else
        ToggleNoRender.Text = "No Render (3D): OFF"
        ToggleNoRender.BackgroundColor3 = THEME.Item
        ToggleNoRender.TextColor3 = THEME.Text
        RunService:Set3dRenderingEnabled(true)
    end
end)

-- 5. BOOSTER
local booster = false
ToggleBooster.MouseButton1Click:Connect(function()
    booster = not booster
    ToggleBooster.Text = booster and "Booster: ON" or "Booster: OFF"
    ToggleBooster.BackgroundColor3 = booster and THEME.Accent or THEME.Item
    ToggleBooster.TextColor3 = booster and Color3.new(0,0,0) or THEME.Text
    Lighting.GlobalShadows = not booster
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("BasePart") then
            v.Material = booster and Enum.Material.SmoothPlastic or Enum.Material.Plastic
            v.CastShadow = not booster
        end
    end
end)

-- MINIMIZE
local minimized = false
MinBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 40), "Out", "Quad", 0.3, true)
        Scroll.Visible = false
        MinBtn.Text = "SHOW"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
        task.wait(0.2)
        Scroll.Visible = true
        MinBtn.Text = "HIDE"
    end
end)

game.StarterGui:SetCore("SendNotification", {Title="Seraphin Full", Text="Walk on Water & No Render Added!", Duration=3})

local HudStroke = Instance.new("UIStroke", FloatHUD)
HudStroke.Color = UI_CONFIG.Accent
HudStroke.Thickness = 2
HudStroke.Transparency = 0.3
local ListLayout = Instance.new("UIListLayout", FloatHUD)

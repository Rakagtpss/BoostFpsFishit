--[[
    Script Name: RakaGanteng Hub
    Style: Wide Super Lite - Modern Black
    Shortcut: RightControl to Hide/Show
]]

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local L_Player = Players.LocalPlayer

-- Global Variables for Toggles
_G.Settings = {
    WalkWater = false,
    NoRender = false,
    AutoFollow = false,
    FollowTarget = "",
    CustomSpeed = 16,
    BoatSpeed = 50
}

-- UI Root
local SG = Instance.new("ScreenGui", game.CoreGui)
SG.Name = "RakaGanteng_WideLite"

-- Floating FPS & PING
local Stats = Instance.new("TextLabel", SG)
Stats.Size = UDim2.new(0, 150, 0, 20)
Stats.Position = UDim2.new(0, 10, 0, 10)
Stats.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Stats.BackgroundTransparency = 0.5
Stats.TextColor3 = Color3.fromRGB(255, 255, 255)
Stats.Font = Enum.Font.Code
Stats.TextSize = 12
Instance.new("UICorner", Stats)

spawn(function()
    while task.wait(0.5) do
        local fps = math.floor(1/task.wait())
        local ping = game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValueString()
        Stats.Text = "FPS: "..fps.." | PING: "..ping
    end
end)

-- Main Frame
local Main = Instance.new("Frame", SG)
Main.Size = UDim2.new(0, 550, 0, 350)
Main.Position = UDim2.new(0.5, -275, 0.5, -175)
Main.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Main.BorderSizePixel = 0
Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 5)

-- Sidebar/Title
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1, 0, 0, 35)
Title.Text = "  RAKAGANTENG | WIDE LITE"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Title.TextXAlignment = Enum.TextXAlignment.Left
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14

local Container = Instance.new("ScrollingFrame", Main)
Container.Size = UDim2.new(1, -20, 1, -50)
Container.Position = UDim2.new(0, 10, 0, 45)
Container.BackgroundTransparency = 1
Container.CanvasSize = UDim2.new(0, 0, 2.5, 0)
Container.ScrollBarThickness = 2

local Layout = Instance.new("UIListLayout", Container)
Layout.Padding = UDim.new(0, 5)

-- Modern Components
local function CreateToggle(name, callback)
    local state = false
    local Btn = Instance.new("TextButton", Container)
    Btn.Size = UDim2.new(1, 0, 0, 32)
    Btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    Btn.Text = "  " .. name .. " [OFF]"
    Btn.TextColor3 = Color3.fromRGB(200, 200, 200)
    Btn.TextXAlignment = Enum.TextXAlignment.Left
    Btn.Font = Enum.Font.Gotham
    Btn.TextSize = 13
    Instance.new("UICorner", Btn)

    Btn.MouseButton1Click:Connect(function()
        state = not state
        Btn.Text = "  " .. name .. (state and " [ON]" or " [OFF]")
        Btn.BackgroundColor3 = state and Color3.fromRGB(50, 50, 50) or Color3.fromRGB(30, 30, 30)
        Btn.TextColor3 = state and Color3.fromRGB(255, 255, 255) or Color3.fromRGB(200, 200, 200)
        callback(state)
    end)
end

-- --- FEATURES ---

-- 1. Walk On Water
local WaterFloor = Instance.new("Part")
WaterFloor.Size = Vector3.new(5000, 1, 5000)
WaterFloor.Transparency = 1
WaterFloor.Anchored = true
WaterFloor.CanCollide = false
WaterFloor.Parent = workspace

CreateToggle("Walk On Water", function(on)
    _G.Settings.WalkWater = on
    spawn(function()
        while _G.Settings.WalkWater do
            local hrp = L_Player.Character and L_Player.Character:FindFirstChild("HumanoidRootPart")
            if hrp then
                WaterFloor.CanCollide = true
                WaterFloor.Position = Vector3.new(hrp.Position.X, 0, hrp.Position.Z) -- Adjust Y if needed
            end
            task.wait()
        end
        WaterFloor.CanCollide = false
    end)
end)

-- 2. Anti Staff (Auto Leave)
CreateToggle("Anti-Staff", function(on)
    if on then
        Players.PlayerAdded:Connect(function(player)
            if player:GetRankInGroup(0) > 100 or player.AccountAge < 1 then -- Contoh logika
                L_Player:Kick("Staff Detected: " .. player.Name)
            end
        end)
    end
end)

-- 3. Booster CPU & Map
CreateToggle("Booster CPU/Map", function(on)
    if on then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic v.CastShadow = false
            elseif v:IsA("Decal") or v:IsA("Texture") then v:Destroy() end
        end
    end
end)

-- 4. Speed Custom (Char & Boat)
CreateToggle("Speed Hack (Active)", function(on)
    _G.SpeedOn = on
    spawn(function()
        while _G.SpeedOn do
            if L_Player.Character and L_Player.Character:FindFirstChild("Humanoid") then
                L_Player.Character.Humanoid.WalkSpeed = 60
                local seat = L_Player.Character.Humanoid.SeatPart
                if seat and seat:IsA("VehicleSeat") then
                    seat.Velocity = seat.CFrame.LookVector * 150
                end
            end
            task.wait()
        end
        if L_Player.Character:FindFirstChild("Humanoid") then L_Player.Character.Humanoid.WalkSpeed = 16 end
    end)
end)

-- 5. No Render
CreateToggle("No Render (AFK Mode)", function(on)
    RunService:Set3dRenderingEnabled(not on)
end)

-- 6. Unlock FPS
CreateToggle("Unlock FPS", function(on)
    if setfpscap then setfpscap(on and 999 or 60) end
end)

-- 7. Fake Name
local nameBox = Instance.new("TextBox", Container)
nameBox.Size = UDim2.new(1, 0, 0, 32)
nameBox.PlaceholderText = "Input Fake Name..."
nameBox.BackgroundColor3 = Color3.fromRGB(30,30,30)
nameBox.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", nameBox)

CreateToggle("Apply Fake Name", function(on)
    local tag = L_Player.Character:FindFirstChild("Head"):FindFirstChildOfClass("BillboardGui")
    if tag and tag:FindFirstChildOfClass("TextLabel") then
        tag:FindFirstChildOfClass("TextLabel").Text = nameBox.Text
    end
end)

-- 8. Auto Follow (Target Name)
local followBox = Instance.new("TextBox", Container)
followBox.Size = UDim2.new(1, 0, 0, 32)
followBox.PlaceholderText = "Target Name to Follow..."
followBox.BackgroundColor3 = Color3.fromRGB(30,30,30)
followBox.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", followBox)

CreateToggle("Auto Follow TP", function(on)
    _G.Settings.AutoFollow = on
    spawn(function()
        while _G.Settings.AutoFollow do
            local t = Players:FindFirstChild(followBox.Text)
            if t and t.Character and t.Character:FindFirstChild("HumanoidRootPart") then
                L_Player.Character.HumanoidRootPart.CFrame = t.Character.HumanoidRootPart.CFrame * CFrame.new(0,0,3)
            end
            task.wait()
        end
    end)
end)

-- 9. Visual Get Secret (ESP)
CreateToggle("Visual Secret ESP", function(on)
    for _, v in pairs(workspace:GetDescendants()) do
        if v.Name:lower():find("secret") or v.Name:lower():find("chest") then
            if on then
                local b = Instance.new("BoxHandleAdornment", v)
                b.Size = v.Size; b.AlwaysOnTop = true; b.ZIndex = 10; b.Adornee = v; b.Transparency = 0.5; b.Color3 = Color3.new(0,1,0); b.Name = "SecretESP"
            else
                if v:FindFirstChild("SecretESP") then v.SecretESP:Destroy() end
            end
        end
    end
end)

-- Hide/Show Logic
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.RightControl then
        Main.Visible = not Main.Visible
    end
end)

print("RakaGanteng Wide Lite Loaded. Press RightControl to hide.")

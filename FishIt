local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // State
local AfkModeActive = false 
local Optimized = false
local Minimized = false
local WowEnabled = false
local RodAnimEnabled = false -- State baru untuk Rod Anim
local BV, Conn

-- // FPS Settings
local fpsLimits = {30, 60, 144, 999}
local currentLimitIndex = 4

-- // UI Config
local UI_WIDTH = 210
local UI_HEIGHT = 245 -- Sedikit diperbesar agar muat tombol baru
local ACCENT = Color3.fromRGB(0, 255, 170)

-- // Cleanup Lama
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

-- // UI Creation
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 20)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 35)
Header.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 11
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 45, 0, 22)
MinBtn.Position = UDim2.new(0.75, 0, 0.5, -11)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 50)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 9
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 4)

-- Scrolling Content
local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
ScrollFrame.Size = UDim2.new(1, -10, 1, -70)
ScrollFrame.Position = UDim2.new(0, 5, 0, 40)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 2
ScrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
ScrollFrame.CanvasSize = UDim2.new(0, 0, 0, 0) -- Reset

local Layout = Instance.new("UIListLayout", ScrollFrame)
Layout.Padding = UDim.new(0, 6)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

local function CreateButton(text)
    local btn = Instance.new("TextButton", ScrollFrame)
    btn.Size = UDim2.new(0.95, 0, 0, 35)
    btn.Text = text
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 10
    btn.TextColor3 = Color3.fromRGB(220, 220, 220)
    btn.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

-- // TOMBOL FITUR
local PotatoBtn = CreateButton("Booster Mode: OFF")
local WowBtn = CreateButton("WALK ON WATER: OFF")
local RenderBtn = CreateButton("No Render 3D: OFF")
local RodAnimBtn = CreateButton("Rod Anim (Trident): OFF") -- Tombol Baru
local FpsCapBtn = CreateButton("FPS CAP: UNLIMITED")

-- Footer FPS
local FpsDisplay = Instance.new("TextLabel", MainFrame)
FpsDisplay.Size = UDim2.new(1, 0, 0, 25)
FpsDisplay.Position = UDim2.new(0, 0, 1, -25)
FpsDisplay.BackgroundTransparency = 1
FpsDisplay.TextColor3 = ACCENT
FpsDisplay.Text = "FPS: --"
FpsDisplay.Font = Enum.Font.Code
FpsDisplay.TextSize = 12

-- // ==========================================
-- // LOGIC FEATURES
-- // ==========================================

-- FPS CAP
FpsCapBtn.MouseButton1Click:Connect(function()
    currentLimitIndex = currentLimitIndex + 1
    if currentLimitIndex > #fpsLimits then currentLimitIndex = 1 end
    local newLimit = fpsLimits[currentLimitIndex]
    if setfpscap then setfpscap(newLimit) end
    FpsCapBtn.Text = newLimit > 900 and "FPS CAP: UNLIMITED" or "FPS CAP: " .. newLimit
end)

-- Potato Mode
PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "Booster Mode: ON" or "Booster Mode: OFF"
    PotatoBtn.BackgroundColor3 = Optimized and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then
                v.Material = Enum.Material.SmoothPlastic
                v.CastShadow = false
            elseif v:IsA("Texture") or v:IsA("Decal") then
                v.Transparency = 1
            elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then
                v.Enabled = false
            end
        end
    end
end)

-- Render Mode
RenderBtn.MouseButton1Click:Connect(function()
    AfkModeActive = not AfkModeActive
    RunService:Set3dRenderingEnabled(not AfkModeActive)
    RenderBtn.Text = AfkModeActive and "No Render 3D: ON" or "No Render 3D: OFF"
    RenderBtn.BackgroundColor3 = AfkModeActive and Color3.fromRGB(200, 50, 50) or Color3.fromRGB(35, 35, 40)
end)

-- Walk on Water
WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = WowEnabled and "Walk On Water: ON" or "Walk On Water: OFF"
    WowBtn.BackgroundColor3 = WowEnabled and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)
    
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if HRP then 
                local vel = HRP.AssemblyLinearVelocity
                HRP.AssemblyLinearVelocity = Vector3.new(vel.X, 0, vel.Z) 
            end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

-- // ==========================================
-- // ROD ANIMATION LOGIC (HOLY TRIDENT)
-- // ==========================================

-- Fungsi untuk mengambil ID Animasi dari ReplicatedStorage dengan aman
local function GetAnimId(pathName)
    local animsFolder = ReplicatedStorage:FindFirstChild("Modules") 
        and ReplicatedStorage.Modules:FindFirstChild("Animations")
    
    if animsFolder and animsFolder:FindFirstChild(pathName) then
        return animsFolder[pathName].AnimationId
    end
    return nil
end

-- Dictionary mapping nama animasi umum ke ID Holy Trident
local tridentMap = {
    ["idle"] = GetAnimId("Holy Trident - EquipIdle"),
    ["cast"] = GetAnimId("Holy Trident - RodThrow"),
    ["throw"] = GetAnimId("Holy Trident - RodThrow"),
    ["reel"] = GetAnimId("Holy Trident - ReelStart"),
    ["charge"] = GetAnimId("Holy Trident - StartRodCharge"),
    ["caught"] = GetAnimId("Holy Trident - FishCaught"),
    ["fishcaught"] = GetAnimId("Holy Trident - FishCaught")
}

local function ApplyRodAnimations(tool)
    if not RodAnimEnabled then return end
    
    -- Tunggu sebentar untuk memastikan animasi tool termuat
    task.wait(0.1)
    
    -- Cari animasi di dalam Tool (bisa di root tool atau di folder 'animations')
    local targets = tool:GetDescendants()
    
    for _, item in pairs(targets) do
        if item:IsA("Animation") then
            local lowerName = item.Name:lower()
            
            -- Cek pencocokan nama dan ganti ID
            for key, newId in pairs(tridentMap) do
                if string.find(lowerName, key) and newId then
                    item.AnimationId = newId
                    -- print("Swapped " .. item.Name .. " to Trident Anim")
                end
            end
        end
    end
end

-- Tombol Trigger
RodAnimBtn.MouseButton1Click:Connect(function()
    RodAnimEnabled = not RodAnimEnabled
    RodAnimBtn.Text = RodAnimEnabled and "Rod Anim (Trident): ON" or "Rod Anim (Trident): OFF"
    RodAnimBtn.BackgroundColor3 = RodAnimEnabled and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)
    
    if RodAnimEnabled then
        -- Apply ke tool yang sedang dipegang
        local currentTool = Char:FindFirstChildOfClass("Tool")
        if currentTool then
            ApplyRodAnimations(currentTool)
            -- Unequip & Equip paksa untuk refresh animasi (opsional, tapi disarankan)
            local hum = Char:FindFirstChild("Humanoid")
            if hum then
                hum:UnequipTools()
                task.wait(0.1)
                hum:EquipTool(currentTool)
            end
        end
    end
end)

-- Listener saat ganti pancingan
Player.CharacterAdded:Connect(function(newChar)
    Char = newChar
    HRP = newChar:WaitForChild("HumanoidRootPart")
    newChar.ChildAdded:Connect(function(child)
        if child:IsA("Tool") and RodAnimEnabled then
            ApplyRodAnimations(child)
        end
    end)
end)

-- Listener awal untuk karakter yang sudah ada
Char.ChildAdded:Connect(function(child)
    if child:IsA("Tool") and RodAnimEnabled then
        ApplyRodAnimations(child)
    end
end)

-- // ==========================================
-- // UI HANDLING
-- // ==========================================

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 35), "Out", "Quad", 0.3, true)
        ScrollFrame.Visible = false
        FpsDisplay.Visible = false
        MinBtn.Text = "SHOW"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
        task.wait(0.2)
        ScrollFrame.Visible = true
        FpsDisplay.Visible = true
        MinBtn.Text = "HIDE"
    end
end)

-- FPS Counter
local lastT = os.clock()
local frames = 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        FpsDisplay.Text = "FPS: " .. frames
        frames = 0
        lastT = os.clock()
    end
end)

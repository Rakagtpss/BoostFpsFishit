local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // Path Engine Spesifik
local GearModule = ReplicatedStorage.Modules.ModelDownloader.Collection.Gears
local EquipRemote = ReplicatedStorage.Packages._Index["sleitnick_net@0.2.0"].net["RE/EquipItem"]

-- // State
local Optimized, AfkModeActive, WowEnabled, Minimized = false, false, false, false
local AutoSellActive = false
local SelectedItem = "None"
local BV, Conn

-- // UI Config
local UI_WIDTH, UI_HEIGHT = 210, 360
local ACCENT = Color3.fromRGB(0, 255, 170)

-- // Cleanup
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 20)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

-- Header & Buttons
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 35)
Header.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 11
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 45, 0, 22)
MinBtn.Position = UDim2.new(0.75, 0, 0.5, -11)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 50)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 9
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 4)

local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
ScrollFrame.Size = UDim2.new(1, -10, 1, -75)
ScrollFrame.Position = UDim2.new(0, 5, 0, 40)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 2
ScrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y

local Layout = Instance.new("UIListLayout", ScrollFrame)
Layout.Padding = UDim.new(0, 6)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

local function CreateButton(text)
    local btn = Instance.new("TextButton", ScrollFrame)
    btn.Size = UDim2.new(0.95, 0, 0, 30)
    btn.Text = text
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 10
    btn.TextColor3 = Color3.fromRGB(220, 220, 220)
    btn.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

-- // Fitur Biasa
local PotatoBtn = CreateButton("Booster Mode: OFF")
local WowBtn = CreateButton("WALK ON WATER: OFF")
local RenderBtn = CreateButton("No Render 3D: OFF")

local Divider = Instance.new("Frame", ScrollFrame)
Divider.Size = UDim2.new(0.9, 0, 0, 1)
Divider.BackgroundColor3 = ACCENT

-- // Fitur Auto Sell Terintegrasi
local SellStatusBtn = CreateButton("AUTO SELL: OFF")
local SelectedLabel = Instance.new("TextLabel", ScrollFrame)
SelectedLabel.Size = UDim2.new(0.9, 0, 0, 20)
SelectedLabel.Text = "Target: " .. SelectedItem
SelectedLabel.TextColor3 = Color3.new(0.8, 0.8, 0.8)
SelectedLabel.Font = Enum.Font.GothamBold
SelectedLabel.TextSize = 10
SelectedLabel.BackgroundTransparency = 1

local ItemContainer = Instance.new("Frame", ScrollFrame)
ItemContainer.Size = UDim2.new(0.95, 0, 0, 0)
ItemContainer.BackgroundTransparency = 1
local ItemLayout = Instance.new("UIListLayout", ItemContainer)
ItemLayout.Padding = UDim.new(0, 4)

-- // LOGIC CORE
local function fireproximityprompt(Obj)
    if Obj then
        Obj:InputHoldBegin()
        task.wait(Obj.HoldDuration)
        Obj:InputHoldEnd()
    end
end

-- Mengambil list item dari Gear Module
local function RefreshItems()
    for _, v in pairs(ItemContainer:GetChildren()) do if v:IsA("TextButton") then v:Destroy() end end
    
    -- Scan folder Gears berdasarkan module yang kamu berikan
    for _, gear in pairs(GearModule:GetChildren()) do
        local itemBtn = Instance.new("TextButton", ItemContainer)
        itemBtn.Size = UDim2.new(1, 0, 0, 25)
        itemBtn.BackgroundColor3 = (SelectedItem == gear.Name) and ACCENT or Color3.fromRGB(45, 45, 50)
        itemBtn.Text = gear.Name
        itemBtn.TextColor3 = (SelectedItem == gear.Name) and Color3.new(0,0,0) or Color3.new(1,1,1)
        itemBtn.Font = Enum.Font.Gotham
        itemBtn.TextSize = 9
        Instance.new("UICorner", itemBtn).CornerRadius = UDim.new(0, 4)
        
        itemBtn.MouseButton1Click:Connect(function()
            SelectedItem = gear.Name
            SelectedLabel.Text = "Target: " .. gear.Name
            RefreshItems() -- Update warna tombol yang dipilih
        end)
    end
    ItemContainer.Size = UDim2.new(0.95, 0, 0, ItemLayout.AbsoluteContentSize.Y)
end

-- // Loop Auto Sell
task.spawn(function()
    while true do
        if AutoSellActive and SelectedItem ~= "None" then
            pcall(function()
                -- 1. Equip Item Menggunakan Remote Net yang kamu berikan
                EquipRemote:FireServer(SelectedItem)
                task.wait(0.1)
                
                -- 2. Trigger Proximity Prompt Jual
                local sellTarget = workspace["!!! DEPENDENCIES"]:GetChildren()[4].SellPrompt.SellPrompt
                fireproximityprompt(sellTarget)
            end)
        end
        task.wait(0.5) -- Delay agar tidak crash
    end
end)

-- // Events
SellStatusBtn.MouseButton1Click:Connect(function()
    AutoSellActive = not AutoSellActive
    SellStatusBtn.Text = AutoSellActive and "AUTO SELL: ON" or "AUTO SELL: OFF"
    SellStatusBtn.BackgroundColor3 = AutoSellActive and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, Minimized and 35 or UI_HEIGHT), "Out", "Quad", 0.3, true)
    ScrollFrame.Visible = not Minimized
    MinBtn.Text = Minimized and "SHOW" or "HIDE"
end)

-- Booster Logic
PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "Booster Mode: ON" or "Booster Mode: OFF"
    PotatoBtn.BackgroundColor3 = Optimized and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(35, 35, 40)
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic v.CastShadow = false
            elseif v:IsA("Texture") or v:IsA("Decal") then v.Transparency = 1 end
        end
    end
end)

RefreshItems()

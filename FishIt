Div.BorderSizePixel = 0

-- >> FUNGSI BARU UNTUK MEMBUAT STATISTIK BERTUMPUK (Atas/Bawah)
local function CreateStatBlock(titleText, defaultVal)
    local Block = Instance.new("Frame", FloatHUD)
    Block.Name = titleText.."Block"
    Block.Size = UDim2.new(1, 0, 0, 35) -- Tinggi block untuk 2 baris teks
    Block.BackgroundTransparency = 1
    
    -- Label Judul (Kecil, Abu-abu, Di Atas)
    local LblTitle = Instance.new("TextLabel", Block)
    LblTitle.Name = "Title"
    LblTitle.Size = UDim2.new(1, 0, 0, 12)
    LblTitle.Position = UDim2.new(0, 0, 0, 0)
    LblTitle.BackgroundTransparency = 1
    LblTitle.Text = string.upper(titleText)
    LblTitle.TextColor3 = UI_THEME.SubTextColor
    LblTitle.Font = Enum.Font.GothamBold
    LblTitle.TextSize = 9
    
    -- Label Nilai (Besar, Putih, Di Bawah)
    local LblValue = Instance.new("TextLabel", Block)
    LblValue.Name = "Value"
    LblValue.Size = UDim2.new(1, 0, 0, 20)
    LblValue.Position = UDim2.new(0, 0, 0, 14) -- Geser ke bawah
    LblValue.BackgroundTransparency = 1
    LblValue.Text = defaultVal
    LblValue.TextColor3 = UI_THEME.TextColor
    LblValue.Font = Enum.Font.GothamBold
    LblValue.TextSize = 16 -- Ukuran font lebih besar
    
    return LblValue -- Mengembalikan objek Value agar bisa diupdate
end

-- Membuat Stat Labels dengan Fungsi Baru
local LblFishVal = CreateStatBlock("Total Caught", "Loading...")
local LblInvVal  = CreateStatBlock("Backpack Size", "0 / 0")


-- ====================================================

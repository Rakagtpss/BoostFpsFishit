--[[ 
 RakaHensem Utility V5 - Modular Version
]]

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- State
local RenderEnabled = true
local Optimized = false
local Minimized = false
local Enabled = false
local BV, Conn

-- UI Creation
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "RakaHensemBeta"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, 180, 0, 280) 
MainFrame.Position = UDim2.new(0.5, -90, 0.4, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(12, 12, 12)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 30)
Header.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.08, 0, 0, 0)
Title.Text = "RakaBeta"
Title.TextColor3 = Color3.fromRGB(0, 255, 150)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 11
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 40, 0, 18)
MinBtn.Position = UDim2.new(0.75, 0, 0.2, 0)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 8
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 4)

-- Content
local Content = Instance.new("Frame", MainFrame)
Content.Size = UDim2.new(1, 0, 1, -35)
Content.Position = UDim2.new(0, 0, 0, 35)
Content.BackgroundTransparency = 1

local Layout = Instance.new("UIListLayout", Content)
Layout.Padding = UDim.new(0, 5)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

local function CreateButton(text)
    local btn = Instance.new("TextButton", Content)
    btn.Size = UDim2.new(0.9, 0, 0, 28)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 10
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 4)
    return btn
end

-- Buttons
local WowBtn = CreateButton("WALK ON WATER: OFF")
local BoostBtn = CreateButton("BOOSTER CPU/GPU: OFF")
local RenderBtn = CreateButton("3D RENDERING: ON")
RenderBtn.BackgroundColor3 = Color3.fromRGB(0, 120, 215) -- Blue for Render

local FpsCapBtn = CreateButton("FPS CAP: UNLIMITED")
local caps = {30, 60, 90, 120, 999}
local capIdx = 5

-- FPS Display
local FpsDisplay = Instance.new("TextLabel", Content)
FpsDisplay.Size = UDim2.new(0.9, 0, 0, 35)
FpsDisplay.BackgroundColor3 = Color3.fromRGB(5, 5, 5)
FpsDisplay.TextColor3 = Color3.fromRGB(0, 255, 255)
FpsDisplay.Text = "FPS: --"
FpsDisplay.Font = Enum.Font.Code
FpsDisplay.TextSize = 16
Instance.new("UICorner", FpsDisplay).CornerRadius = UDim.new(0, 4)
local Stroke = Instance.new("UIStroke", FpsDisplay)
Stroke.Color = Color3.fromRGB(0, 255, 150)
Stroke.Thickness = 1.2

-- Logic Functions
BoostBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    BoostBtn.Text = Optimized and "BOOSTER CPU/GPU: ON" or "BOOSTER CPU/GPU: OFF"
    BoostBtn.BackgroundColor3 = Optimized and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(30, 30, 30)
    
    settings().Rendering.QualityLevel = Optimized and 1 or 0
    Lighting.GlobalShadows = not Optimized
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("PostProcessEffect") or v:IsA("ParticleEmitter") then
            v.Enabled = not Optimized
        end
    end
end)

RenderBtn.MouseButton1Click:Connect(function()
    RenderEnabled = not RenderEnabled
    RunService:Set3dRenderingEnabled(RenderEnabled)
    RenderBtn.Text = RenderEnabled and "3D RENDERING: ON" or "3D RENDERING: OFF"
    RenderBtn.BackgroundColor3 = RenderEnabled and Color3.fromRGB(0, 120, 215) or Color3.fromRGB(150, 0, 0)
end)

FpsCapBtn.MouseButton1Click:Connect(function()
    capIdx = capIdx >= #caps and 1 or capIdx + 1
    local cap = caps[capIdx]
    setfpscap(cap)
    FpsCapBtn.Text = "FPS CAP: " .. (cap > 900 and "UNLIMITED" or cap)
end)

WowBtn.MouseButton1Click:Connect(function()
    Enabled = not Enabled
    WowBtn.Text = Enabled and "WALK ON WATER: ON" or "WALK ON WATER: OFF"
    WowBtn.BackgroundColor3 = Enabled and Color3.fromRGB(0, 180, 100) or Color3.fromRGB(30, 30, 30)
    if Enabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if HRP then HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z) end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    MainFrame:TweenSize(Minimized and UDim2.new(0, 180, 0, 30) or UDim2.new(0, 180, 0, 280), "Out", "Quad", 0.3, true)
    Content.Visible = not Minimized
    MinBtn.Text = Minimized and "SHOW" or "HIDE"
end)

local lastT = os.clock()
local frames = 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        FpsDisplay.Text = "FPS: " .. frames
        frames = 0
        lastT = os.clock()
    end
end)

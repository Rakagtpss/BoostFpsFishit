-- // Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // Remotes Path
local Net = ReplicatedStorage:WaitForChild("Packages"):WaitForChild("_Index")["sleitnick_net@0.2.0"].net
local EquipRemote = Net:WaitForChild("RE/EquipItem")
local HotbarRemote = Net:WaitForChild("RE/EquipToolFromHotbar")
local GearsPath = ReplicatedStorage:WaitForChild("Modules"):WaitForChild("ModelDownloader"):WaitForChild("Collection"):WaitForChild("Gears")

-- // State
local Optimized = false
local AfkModeActive = false
local WowEnabled = false
local Minimized = false
local SelectedItem = ""
local BV, Conn

-- // UI Config
local UI_WIDTH = 320
local UI_HEIGHT = 410
local ACCENT = Color3.fromRGB(0, 255, 170)
local BG_COLOR = Color3.fromRGB(15, 15, 17)
local SECONDARY = Color3.fromRGB(25, 25, 30)

-- // Cleanup
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

-- // Main UI
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = BG_COLOR
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 10)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 45)
Header.BackgroundColor3 = SECONDARY
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 10)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 16
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 60, 0, 25)
MinBtn.Position = UDim2.new(0.95, -65, 0.5, -12)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 11
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 6)

-- Scrolling Content
local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
ScrollFrame.Size = UDim2.new(1, -10, 1, -65)
ScrollFrame.Position = UDim2.new(0, 5, 0, 55)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 2
ScrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
ScrollFrame.CanvasSize = UDim2.new(0,0,0,0)

local Layout = Instance.new("UIListLayout", ScrollFrame)
Layout.Padding = UDim.new(0, 8)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- Floating Info (DI BAWAH UI)
local FloatingFrame = Instance.new("Frame", MainFrame)
FloatingFrame.Size = UDim2.new(1, 0, 0, 32)
FloatingFrame.Position = UDim2.new(0, 0, 1, 10)
FloatingFrame.BackgroundColor3 = SECONDARY
FloatingFrame.BackgroundTransparency = 0.1
Instance.new("UICorner", FloatingFrame).CornerRadius = UDim.new(0, 6)

local FloatingText = Instance.new("TextLabel", FloatingFrame)
FloatingText.Size = UDim2.new(1, 0, 1, 0)
FloatingText.BackgroundTransparency = 1
FloatingText.Text = "Status: Idle | FPS: --"
FloatingText.TextColor3 = ACCENT
FloatingText.Font = Enum.Font.Code
FloatingText.TextSize = 11

-- Helper Function Buttons
local function CreateButton(text, color)
    local btn = Instance.new("TextButton", ScrollFrame)
    btn.Size = UDim2.new(0.94, 0, 0, 42)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 13
    btn.TextColor3 = Color3.new(1,1,1)
    btn.BackgroundColor3 = color or SECONDARY
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    return btn
end

-- // FEATURES
local BoosterBtn = CreateButton("BOOSTER MODE: OFF")
local WaterBtn = CreateButton("WALK ON WATER: OFF")
local AntiRenderBtn = CreateButton("NO RENDER 3D: OFF")

local Divider = Instance.new("Frame", ScrollFrame)
Divider.Size = UDim2.new(0.9, 0, 0, 2)
Divider.BackgroundColor3 = SECONDARY
Divider.BorderSizePixel = 0

local ScanBtn = CreateButton("ðŸ” SCAN BACKPACK", Color3.fromRGB(40, 60, 100))

-- Item Scroll Area
local ItemScroll = Instance.new("ScrollingFrame", ScrollFrame)
ItemScroll.Size = UDim2.new(0.94, 0, 0, 120)
ItemScroll.BackgroundColor3 = Color3.fromRGB(10, 10, 12)
ItemScroll.BorderSizePixel = 0
ItemScroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
ItemScroll.CanvasSize = UDim2.new(0,0,0,0)
Instance.new("UICorner", ItemScroll).CornerRadius = UDim.new(0, 8)
local ItemLayout = Instance.new("UIListLayout", ItemScroll)

local SellBtn = CreateButton("ðŸ’° SELL SELECTED ITEM", Color3.fromRGB(180, 130, 0))

-- // LOGIC: SCAN & DOUBLE EQUIP
ScanBtn.MouseButton1Click:Connect(function()
    for _, v in pairs(ItemScroll:GetChildren()) do if v:IsA("TextButton") then v:Destroy() end end
    
    for _, item in pairs(GearsPath:GetChildren()) do
        local ibtn = Instance.new("TextButton", ItemScroll)
        ibtn.Size = UDim2.new(1, -10, 0, 35)
        ibtn.BackgroundTransparency = 1
        ibtn.Text = "   " .. item.Name
        ibtn.TextColor3 = Color3.new(0.8, 0.8, 0.8)
        ibtn.Font = Enum.Font.GothamMedium
        ibtn.TextSize = 13
        ibtn.TextXAlignment = Enum.TextXAlignment.Left
        
        ibtn.MouseButton1Click:Connect(function()
            SelectedItem = item.Name
            SellBtn.Text = "SELL: " .. item.Name
            
            -- EXECUTE DOUBLE EQUIP (RE/EquipItem & RE/EquipToolFromHotbar)
            pcall(function()
                -- Remote 1: Equip dari Hotbar (Jika ada di slot)
                HotbarRemote:FireServer(item.Name)
                
                -- Remote 2: Equip Item (Format Gears sesuai permintaan)
                EquipRemote:FireServer(item.Name, "Gears")
            end)
            
            -- Visual Highlight
            for _, b in pairs(ItemScroll:GetChildren()) do if b:IsA("TextButton") then b.TextColor3 = Color3.new(0.8,0.8,0.8) end end
            ibtn.TextColor3 = ACCENT
            FloatingText.Text = "Status: Equipping " .. item.Name
        end)
    end
end)

-- // LOGIC: SELL ITEM
SellBtn.MouseButton1Click:Connect(function()
    if SelectedItem ~= "" then
        local sellPrompt = workspace["!!! DEPENDENCIES"]:GetChildren()[8].SellPrompt.SellPrompt
        fireproximityprompt(sellPrompt)
        FloatingText.Text = "Status: Sold " .. SelectedItem
    end
end)

-- // BOOSTER & UTILS
BoosterBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    BoosterBtn.Text = Optimized and "BOOSTER MODE: ON" or "BOOSTER MODE: OFF"
    BoosterBtn.TextColor3 = Optimized and ACCENT or Color3.new(1,1,1)
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic v.CastShadow = false
            elseif v:IsA("Texture") or v:IsA("Decal") then v.Transparency = 1 end
        end
    end
end)

WaterBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WaterBtn.Text = WowEnabled and "WALK ON WATER: ON" or "WALK ON WATER: OFF"
    WaterBtn.TextColor3 = WowEnabled and ACCENT or Color3.new(1,1,1)
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        Conn = RunService.Heartbeat:Connect(function()
            HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z)
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

AntiRenderBtn.MouseButton1Click:Connect(function()
    AfkModeActive = not AfkModeActive
    RunService:Set3dRenderingEnabled(not AfkModeActive)
    AntiRenderBtn.Text = AfkModeActive and "NO RENDER 3D: ON" or "NO RENDER 3D: OFF"
    AntiRenderBtn.TextColor3 = AfkModeActive and Color3.new(1,0,0) or Color3.new(1,1,1)
end)

-- // MINIMIZE
MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 45), "Out", "Quad", 0.3, true)
        ScrollFrame.Visible = false
        FloatingFrame.Visible = false
        MinBtn.Text = "SHOW"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
        task.wait(0.2)
        ScrollFrame.Visible = true
        FloatingFrame.Visible = true
        MinBtn.Text = "HIDE"
    end
end)

-- // FPS & STATUS LOOP
local lastT = os.clock()
local frames = 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        local subStatus = SelectedItem ~= "" and "Selected: " .. SelectedItem or "Idle"
        FloatingText.Text = "Status: " .. subStatus .. " | FPS: " .. frames
        frames = 0
        lastT = os.clock()
    end
end)

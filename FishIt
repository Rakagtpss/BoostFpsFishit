--[[ 
 RakaHensem Utility V5 WIDE - TURBO EDITION
 Fitur: Super Instant Fishing, Custom Delay Input, Wide UI, Anti-Spam
]]

-- ================= SERVICES =================
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- ================= STATE & CONFIG =================
getgenv().fishingStart = false
local delayBait = 0.56   
local delayReel = 1.15 
local delayReset = 0.2 
local Optimized = false
local Minimized = false

-- Remote Definitions
local rs = ReplicatedStorage
local net = rs.Packages["_Index"]["sleitnick_net@0.2.0"].net
local ChargeRod    = net["RF/ChargeFishingRod"]
local RequestGame  = net["RF/RequestFishingMinigameStarted"]
local CompleteGame = net["RE/FishingCompleted"]
local CancelInput  = net["RF/CancelFishingInputs"]

-- Fishing Blocker (Hook Namecall)
local FishingBlocker = { Enabled = true }
local BLOCKED_REMOTES = { [ChargeRod] = true, [RequestGame] = true, [CompleteGame] = true, [CancelInput] = true }

local oldNamecall
oldNamecall = hookmetamethod(game, "__namecall", function(self, ...)
    local method = getnamecallmethod()
    if FishingBlocker.Enabled and (method == "InvokeServer" or method == "FireServer") and BLOCKED_REMOTES[self] and not checkcaller() then
        return nil
    end
    return oldNamecall(self, ...)
end)

-- Lightweight Spawn Limiter
local MAX_PARALLEL = 4
local active = 0
local function lightSpawn(fn)
    if active >= MAX_PARALLEL then return end
    active = active + 1
    task.spawn(function()
        pcall(fn)
        active = active - 1
    end)
end

-- ================= UI DESIGN =================
if CoreGui:FindFirstChild("RakaBoostV") then CoreGui.RakaBoostV:Destroy() end
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "RakaBoostV"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, 440, 0, 300) 
MainFrame.Position = UDim2.new(0.5, -220, 0.3, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 30)
Header.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.7, 0, 1, 0)
Title.Position = UDim2.new(0.03, 0, 0, 0)
Title.Text = "RAKA UTILITY V5 | TURBO MODE"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 11
Title.TextColor3 = Color3.fromRGB(0, 255, 150)
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

-- Content
local Content = Instance.new("ScrollingFrame", MainFrame)
Content.Size = UDim2.new(1, -10, 1, -85)
Content.Position = UDim2.new(0, 5, 0, 35)
Content.ScrollBarThickness = 2
Content.BackgroundTransparency = 1
Content.CanvasSize = UDim2.new(0, 0, 0, 350)

local Grid = Instance.new("UIGridLayout", Content)
Grid.CellSize = UDim2.new(0, 205, 0, 35)
Grid.CellPadding = UDim2.new(0, 8, 0, 8)
Grid.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- UI Helpers
local function CreateButton(txt)
    local b = Instance.new("TextButton", Content)
    b.Text = txt
    b.Font = Enum.Font.GothamBold
    b.TextSize = 10
    b.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    b.TextColor3 = Color3.new(1, 1, 1)
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 5)
    return b
end

local function CreateInput(label, default)
    local f = Instance.new("Frame", Content)
    f.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Instance.new("UICorner", f).CornerRadius = UDim.new(0, 5)
    local tl = Instance.new("TextLabel", f)
    tl.Size = UDim2.new(0.6, 0, 1, 0)
    tl.Text = label
    tl.Font = Enum.Font.GothamBold
    tl.TextSize = 9
    tl.TextColor3 = Color3.fromRGB(200, 200, 200)
    tl.BackgroundTransparency = 1
    local ti = Instance.new("TextBox", f)
    ti.Size = UDim2.new(0.35, 0, 0.7, 0)
    ti.Position = UDim2.new(0.6, 0, 0.15, 0)
    ti.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    ti.Text = tostring(default)
    ti.TextColor3 = Color3.new(1, 1, 1)
    ti.Font = Enum.Font.Code
    ti.TextSize = 10
    Instance.new("UICorner", ti).CornerRadius = UDim.new(0, 4)
    return ti
end

-- Elements
local FastBtn   = CreateButton("TURBO FISH: OFF")
local BoostBtn  = CreateButton("BOOSTER: OFF")
local InpBait   = CreateInput("BAIT DELAY:", delayBait)
local InpReel   = CreateInput("REEL DELAY:", delayReel)
local InpRst    = CreateInput("RESET DELAY:", delayReset)
local FpsBtn    = CreateButton("FPS CAP: UNLIMITED")

-- ================= LOGIC: SUPER INSTANT FISH =================
local function startFishingSuperInstantLoop()
    pcall(function() CancelInput:InvokeServer() end)
    task.wait(0.05)
    while getgenv().fishingStart do
        lightSpawn(function()
            ChargeRod:InvokeServer({[4] = os.clock()})
        end)
        task.wait(delayBait)
        
        lightSpawn(function()
            RequestGame:InvokeServer(-0.571874737739563, 1, os.clock())
        end)
        task.wait(delayReel) 
        
        pcall(function() CompleteGame:FireServer() end)
        task.wait(delayReset) 
        pcall(function() CancelInput:InvokeServer() end)
        task.wait(0.05)
    end
end

FastBtn.MouseButton1Click:Connect(function()
    getgenv().fishingStart = not getgenv().fishingStart
    FastBtn.Text = getgenv().fishingStart and "TURBO FISH: ON" or "TURBO FISH: OFF"
    FastBtn.BackgroundColor3 = getgenv().fishingStart and Color3.fromRGB(0, 150, 80) or Color3.fromRGB(30, 30, 30)
    
    -- Sync Input Delays
    delayBait = tonumber(InpBait.Text) or 0.56
    delayReel = tonumber(InpReel.Text) or 1.15
    delayReset = tonumber(InpRst.Text) or 0.2

    if getgenv().fishingStart then
        task.spawn(startFishingSuperInstantLoop)
    end
end)

-- ================= OTHERS =================
BoostBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    BoostBtn.Text = Optimized and "BOOSTER: ON" or "BOOSTER: OFF"
    settings().Rendering.QualityLevel = Optimized and 1 or 10
end)

local FPS = Instance.new("TextLabel", MainFrame)
FPS.Size = UDim2.new(0.95, 0, 0, 30)
FPS.Position = UDim2.new(0.025, 0, 1, -40)
FPS.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
FPS.TextColor3 = Color3.fromRGB(0, 255, 255)
FPS.Text = "FPS: -- | RAKA UTILITY"
FPS.Font = Enum.Font.Code
FPS.TextSize = 11
Instance.new("UICorner", FPS)

local f, t = 0, os.clock()
RunService.RenderStepped:Connect(function()
    f += 1
    if os.clock() - t >= 1 then
        FPS.Text = "FPS: "..f.." | TURBO ACTIVE"
        f, t = 0, os.clock()
    end
end)

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 50, 0, 20)
MinBtn.Position = UDim2.new(1, -60, 0.2, 0)
MinBtn.Text = "HIDE"
MinBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MinBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", MinBtn)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    Content.Visible = not Minimized
    FPS.Visible = not Minimized
    MainFrame:TweenSize(Minimized and UDim2.new(0, 440, 0, 30) or UDim2.new(0, 440, 0, 300), "Out", "Quad", 0.3, true)
    MinBtn.Text = Minimized and "SHOW" or "HIDE"
end)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TweenService = game:GetService("TweenService")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // --- CONFIGURATION ---
local UI_WIDTH = 260 
local UI_HEIGHT = 220 
local SELL_MENU_WIDTH = 240 -- Lebar menu sell agar teks muat

local THEME = {
    Background = Color3.fromRGB(20, 20, 24), -- Dark Matte
    Header = Color3.fromRGB(28, 28, 32),
    Button = Color3.fromRGB(35, 35, 40),
    ButtonActive = Color3.fromRGB(45, 55, 65),
    Text = Color3.fromRGB(220, 220, 220),
    Accent = Color3.fromRGB(80, 140, 255), -- Soft Blue
    SellText = Color3.fromRGB(255, 100, 100) -- Merah pudar untuk teks [SELL]
}

-- // State
local AfkModeActive = false 
local Optimized = false
local Minimized = false
local WowEnabled = false
local BV, Conn
local fpsLimits = {30, 60, 144, 999}
local currentLimitIndex = 4

-- // Cleanup
if CoreGui:FindFirstChild("SeraphinUnique") then CoreGui.SeraphinUnique:Destroy() end

-- // --- UI CREATION ---
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinUnique"
Gui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.3, 0)
MainFrame.BackgroundColor3 = THEME.Background
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 10)

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 40)
Header.BackgroundColor3 = THEME.Header
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 10)

-- Filler untuk meratakan bawah header
local HeaderFiller = Instance.new("Frame", Header)
HeaderFiller.Size = UDim2.new(1, 0, 0, 10)
HeaderFiller.Position = UDim2.new(0, 0, 1, -10)
HeaderFiller.BackgroundColor3 = THEME.Header
HeaderFiller.BorderSizePixel = 0

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Text = "SERAPHIN <b>v3</b>"
Title.RichText = true
Title.TextColor3 = THEME.Text
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 24, 0, 24)
MinBtn.Position = UDim2.new(1, -35, 0.5, -12)
MinBtn.Text = "-"
MinBtn.TextColor3 = THEME.Text
MinBtn.BackgroundColor3 = THEME.Button
MinBtn.Font = Enum.Font.GothamBold
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 6)

-- Main Scroll
local ScrollFrame = Instance.new("ScrollingFrame", MainFrame)
ScrollFrame.Size = UDim2.new(1, -20, 1, -50)
ScrollFrame.Position = UDim2.new(0, 10, 0, 45)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 2
ScrollFrame.ScrollBarImageColor3 = THEME.Accent
ScrollFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y

local Layout = Instance.new("UIListLayout", ScrollFrame)
Layout.Padding = UDim.new(0, 8)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- Helper Button Creator
local function CreateButton(text)
    local btn = Instance.new("TextButton", ScrollFrame)
    btn.Size = UDim2.new(1, 0, 0, 32)
    btn.Text = text
    btn.Font = Enum.Font.GothamMedium
    btn.TextSize = 11
    btn.TextColor3 = THEME.Text
    btn.BackgroundColor3 = THEME.Button
    btn.AutoButtonColor = false
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    
    btn.MouseEnter:Connect(function() 
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = THEME.ButtonActive}):Play() 
    end)
    btn.MouseLeave:Connect(function() 
        if not (text:find("ON") or text:find("Unl")) then
             TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = THEME.Button}):Play() 
        end
    end)
    return btn
end

-- // --- TOMBOL MENU UTAMA ---
local SellMenuBtn = CreateButton("Open Sell Menu >")
local PotatoBtn = CreateButton("Booster Mode: OFF")
local WowBtn = CreateButton("Walk On Water: OFF")
local RenderBtn = CreateButton("No Render 3D: OFF")
local FpsCapBtn = CreateButton("FPS Cap: Unlimited")

-- // --- SELL MENU POPUP ---
local SellFrame = Instance.new("Frame", MainFrame)
SellFrame.Size = UDim2.new(0, SELL_MENU_WIDTH, 0, 250) -- Lebih panjang agar enak dilihat
SellFrame.Position = UDim2.new(1, 10, 0, 0) -- Muncul di sebelah kanan UI utama
SellFrame.BackgroundColor3 = THEME.Background
SellFrame.Visible = false
SellFrame.ZIndex = 5
SellFrame.ClipsDescendants = true
Instance.new("UICorner", SellFrame).CornerRadius = UDim.new(0, 10)

local SellTitle = Instance.new("TextLabel", SellFrame)
SellTitle.Size = UDim2.new(1, -10, 0, 30)
SellTitle.Position = UDim2.new(0, 5, 0, 0)
SellTitle.Text = "AVAILABLE ITEMS (SCROLL)"
SellTitle.TextColor3 = Color3.fromRGB(150, 150, 150)
SellTitle.Font = Enum.Font.GothamBold
SellTitle.TextSize = 10
SellTitle.BackgroundTransparency = 1

local SellScroll = Instance.new("ScrollingFrame", SellFrame)
SellScroll.Size = UDim2.new(1, -10, 1, -35)
SellScroll.Position = UDim2.new(0, 5, 0, 30)
SellScroll.BackgroundTransparency = 1
SellScroll.ScrollBarThickness = 3
SellScroll.ScrollBarImageColor3 = THEME.Accent
SellScroll.AutomaticCanvasSize = Enum.AutomaticSize.Y -- PENTING: Agar bisa digulir
Instance.new("UIListLayout", SellScroll).Padding = UDim.new(0, 5)

-- // --- LOGIC ---

local function TriggerSell()
    pcall(function()
        local PlayerGui = Player:FindFirstChild("PlayerGui")
        -- Sesuaikan path ini dengan game kamu jika berbeda
        local SellBtn = PlayerGui["Exclusive Store"].Main.Content.Items["Sell VIP"]
        if SellBtn then SellBtn.MouseButton1Click:Fire() end
    end)
end

local function ScanReplicatedAndList()
    -- Bersihkan list lama
    for _, child in pairs(SellScroll:GetChildren()) do 
        if child:IsA("TextButton") or child:IsA("TextLabel") then child:Destroy() end 
    end

    -- Mencari folder Items di ReplicatedStorage
    local TargetFolder = nil
    if ReplicatedStorage:FindFirstChild("Resources") and ReplicatedStorage.Resources:FindFirstChild("Items") then
        TargetFolder = ReplicatedStorage.Resources.Items
    elseif ReplicatedStorage:FindFirstChild("Items") then
        TargetFolder = ReplicatedStorage.Items
    end

    if TargetFolder then
        for _, item in pairs(TargetFolder:GetChildren()) do
            -- Kita ambil item langsung atau jika ada dalam folder kategori
            local itemsToDisplay = {}
            if item:IsA("Folder") then
                for _, subItem in pairs(item:GetChildren()) do table.insert(itemsToDisplay, subItem) end
            else
                table.insert(itemsToDisplay, item)
            end

            for _, realItem in pairs(itemsToDisplay) do
                local btn = Instance.new("TextButton", SellScroll)
                btn.Size = UDim2.new(1, -4, 0, 25) -- Sedikit padding kanan
                btn.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
                btn.AutoButtonColor = false
                btn.Font = Enum.Font.Code -- Font Code agar terlihat teknis
                btn.TextSize = 10
                btn.TextColor3 = THEME.Text
                btn.TextXAlignment = Enum.TextXAlignment.Left
                -- FORMAT TEKS SESUAI PERMINTAAN
                btn.Text = "  [ SELL ITEM : ] [ " .. realItem.Name .. " ]"
                btn.RichText = true -- Opsional jika ingin mewarnai sebagian teks
                Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 4)

                -- Event Klik
                btn.MouseButton1Click:Connect(function()
                    local backpackItem = Player.Backpack:FindFirstChild(realItem.Name)
                    
                    if backpackItem then
                        -- Animasi Feedback
                        btn.BackgroundColor3 = Color3.fromRGB(50, 150, 100) -- Hijau
                        btn.Text = "  [ PROCESSING... ]"
                        
                        -- Equip & Sell
                        Char.Humanoid:EquipTool(backpackItem)
                        task.wait(0.1)
                        TriggerSell()
                        
                        task.wait(0.5)
                        btn.Text = "  [ SOLD SUCCESS ]"
                        task.wait(0.5)
                        
                        -- Reset Teks
                        btn.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
                        btn.Text = "  [ SELL ITEM : ] [ " .. realItem.Name .. " ]"
                    else
                        -- Item tidak ada di tas
                        btn.BackgroundColor3 = Color3.fromRGB(150, 50, 50) -- Merah
                        btn.Text = "  [ ITEM NOT OWNED ]"
                        task.wait(1)
                        btn.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
                        btn.Text = "  [ SELL ITEM : ] [ " .. realItem.Name .. " ]"
                    end
                end)
            end
        end
    else
        local errLabel = Instance.new("TextLabel", SellScroll)
        errLabel.Size = UDim2.new(1,0,0,30)
        errLabel.Text = "Folder 'Items' not found in ReplicatedStorage"
        errLabel.TextColor3 = Color3.fromRGB(200,50,50)
        errLabel.BackgroundTransparency = 1
    end
end

-- Toggle Sell Menu
SellMenuBtn.MouseButton1Click:Connect(function()
    SellFrame.Visible = not SellFrame.Visible
    if SellFrame.Visible then
        SellMenuBtn.Text = "Close Sell Menu <"
        SellMenuBtn.BackgroundColor3 = THEME.Accent
        ScanReplicatedAndList() -- Refresh list saat dibuka
    else
        SellMenuBtn.Text = "Open Sell Menu >"
        SellMenuBtn.BackgroundColor3 = THEME.Button
    end
end)

-- Standard Features Logic
PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "Booster Mode: ON" or "Booster Mode: OFF"
    PotatoBtn.TextColor3 = Optimized and THEME.Accent or THEME.Text
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic v.CastShadow = false end
        end
    end
end)

RenderBtn.MouseButton1Click:Connect(function()
    AfkModeActive = not AfkModeActive
    RunService:Set3dRenderingEnabled(not AfkModeActive)
    RenderBtn.Text = AfkModeActive and "No Render 3D: ON" or "No Render 3D: OFF"
    RenderBtn.TextColor3 = AfkModeActive and Color3.fromRGB(255, 80, 80) or THEME.Text
end)

WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = WowEnabled and "Walk On Water: ON" or "Walk On Water: OFF"
    WowBtn.TextColor3 = WowEnabled and THEME.Accent or THEME.Text
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if HRP then HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z) end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

FpsCapBtn.MouseButton1Click:Connect(function()
    currentLimitIndex = currentLimitIndex + 1
    if currentLimitIndex > #fpsLimits then currentLimitIndex = 1 end
    local newLimit = fpsLimits[currentLimitIndex]
    if setfpscap then setfpscap(newLimit) end
    FpsCapBtn.Text = newLimit > 900 and "FPS Cap: Unlimited" or "FPS Cap: " .. newLimit
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 40), "Out", "Quad", 0.3, true)
        ScrollFrame.Visible = false
        SellFrame.Visible = false
        MinBtn.Text = "+"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
        task.wait(0.2)
        ScrollFrame.Visible = true
        MinBtn.Text = "-"
    end
end)

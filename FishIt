-- // SERAPHIN HELPER - NETWORK & PING UPDATE // --
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local TweenService = game:GetService("TweenService")
local TeleportService = game:GetService("TeleportService")
local Stats = game:GetService("Stats") -- Untuk mengambil data Ping

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // State & Settings
local Optimized, Minimized, WowEnabled = false, false, false
local fpsLimits = {15, 30, 60, 90, 180, 999}
local currentLimitIndex = 6

-- // UI Config
local UI_WIDTH, UI_HEIGHT = 340, 200
local ACCENT = Color3.fromRGB(0, 255, 170)
local BG_MAIN = Color3.fromRGB(10, 10, 12)

-- // ANTI-AFK & AUTO RECONNECT
task.spawn(function()
    local VirtualUser = game:GetService("VirtualUser")
    Player.Idled:Connect(function() VirtualUser:ClickButton2(Vector2.new()) end)
end)

game:GetService("GuiService").ErrorMessageChanged:Connect(function()
    task.wait(5) TeleportService:Teleport(game.PlaceId, Player)
end)

-- // Cleanup
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

-- // UI SETUP
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.4, 0)
MainFrame.BackgroundColor3 = BG_MAIN
MainFrame.BackgroundTransparency = 0.2
MainFrame.Active, MainFrame.Draggable = true, true
Instance.new("UICorner", MainFrame)

local Title = Instance.new("TextLabel", MainFrame)
Title.Size, Title.Position = UDim2.new(1, -100, 0, 35), UDim2.new(0, 15, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText, Title.TextColor3, Title.Font, Title.TextSize = true, Color3.new(1,1,1), 17, 14
Title.BackgroundTransparency, Title.TextXAlignment = 1, 0

local Scroll = Instance.new("ScrollingFrame", MainFrame)
Scroll.Size, Scroll.Position = UDim2.new(1, -20, 1, -75), UDim2.new(0, 10, 0, 45)
Scroll.BackgroundTransparency, Scroll.BorderSizePixel, Scroll.CanvasSize = 1, 0, UDim2.new(0,0,0,0)
Instance.new("UIGridLayout", Scroll).CellSize = UDim2.new(0.5, -7, 0, 38)

local function CreateButton(text)
    local btn = Instance.new("TextButton", Scroll)
    btn.Text, btn.Font, btn.TextSize = text, 17, 10
    btn.TextColor3, btn.BackgroundColor3, btn.BackgroundTransparency = Color3.new(0.9,0.9,0.9), Color3.fromRGB(25,25,30), 0.3
    Instance.new("UICorner", btn)
    return btn
end

-- // BUTTONS
local PotBtn = CreateButton("BOOSTER: OFF")
local NetBtn = CreateButton("NET BOOST: OFF") -- Fitur Baru
local FpsBtn = CreateButton("FPS: UNLIMITED")
local RedBtn = CreateButton("NO RENDER: OFF")
local WowBtn = CreateButton("WATER WALK: OFF")

local StatusDisplay = Instance.new("TextLabel", MainFrame)
StatusDisplay.Size, StatusDisplay.Position = UDim2.new(1, -15, 0, 20), UDim2.new(0, 0, 1, -25)
StatusDisplay.BackgroundTransparency, StatusDisplay.TextColor3 = 1, ACCENT
StatusDisplay.Font, StatusDisplay.TextSize, StatusDisplay.TextXAlignment = 16, 10, 1
StatusDisplay.Text = "FPS: -- | PING: -- ms"

-- // LOGIC
PotBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotBtn.Text = Optimized and "BOOSTER: ON" or "BOOSTER: OFF"
    settings().Rendering.QualityLevel = Optimized and 1 or 10
    Lighting.GlobalShadows = not Optimized
    for _, v in pairs(game:GetDescendants()) do
        if Optimized and v:IsA("BasePart") then v.Material, v.CastShadow = 0, false end
    end
end)

-- NET BOOST LOGIC (Kejam tapi Ringkas)
NetBtn.MouseButton1Click:Connect(function()
    _G.NetBoost = not _G.NetBoost
    NetBtn.Text = _G.NetBoost and "NET BOOST: ON" or "NET BOOST: OFF"
    settings().Network.IncomingReplicationLag = _G.NetBoost and 0 or 0
    -- Mengoptimalkan pengiriman data ke server
    sethiddenproperty(game:GetService("NetworkClient"), "PhysicsSendRate", _G.NetBoost and 20 or 10)
end)

FpsBtn.MouseButton1Click:Connect(function()
    currentLimitIndex = currentLimitIndex % #fpsLimits + 1
    local lim = fpsLimits[currentLimitIndex]
    if setfpscap then setfpscap(lim) end
    FpsBtn.Text = "FPS: "..(lim > 900 and "UNLIMITED" or lim)
end)

RedBtn.MouseButton1Click:Connect(function()
    RunService:Set3dRenderingEnabled(not RunService:Get3dRenderingEnabled())
    RedBtn.Text = not RunService:Get3dRenderingEnabled() and "NO RENDER: ON" or "NO RENDER: OFF"
end)

-- // FPS & REAL PING LOOP
local lastT, frames = os.clock(), 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        -- Mengambil Ping Real-Time dari Server Roblox
        local ping = math.floor(Stats.Network.ServerStatsItem["Data Ping"]:GetValue())
        StatusDisplay.Text = "FPS: "..frames.." | PING: "..ping.." ms | SeraphinXRaka"
        frames, lastT = 0, os.clock()
    end
end)

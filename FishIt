local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local CoreGui = game:GetService("CoreGui")
local Lighting = game:GetService("Lighting")
local TweenService = game:GetService("TweenService")

local Player = Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()
local HRP = Char:WaitForChild("HumanoidRootPart")

-- // State
local AfkModeActive = false 
local Optimized = false
local Minimized = false
local WowEnabled = false
local BV, Conn

-- // FPS Settings
local fpsLimits = {30, 60, 144, 999}
local currentLimitIndex = 4

-- // UI Config
local UI_WIDTH = 350
local UI_HEIGHT = 200
local ACCENT = Color3.fromRGB(0, 255, 170)
local BG_MAIN = Color3.fromRGB(10, 10, 12)
local TRANSPARENCY = 0.25

-- // Cleanup
if CoreGui:FindFirstChild("SeraphinHelper") then CoreGui.SeraphinHelper:Destroy() end

-- // FLOATING TEXT (Pojok Kanan Bawah)
local function ShowFloatingText()
    local FloatingGui = Instance.new("ScreenGui", CoreGui)
    FloatingGui.Name = "SeraphinFloating"
    
    local TextLabel = Instance.new("TextLabel", FloatingGui)
    TextLabel.Size = UDim2.new(0, 200, 0, 30)
    TextLabel.Position = UDim2.new(1, -210, 1, 0) 
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = "SeraphinXRaka Loaded"
    TextLabel.TextColor3 = ACCENT
    TextLabel.Font = Enum.Font.GothamBold
    TextLabel.TextSize = 16
    TextLabel.TextXAlignment = Enum.TextXAlignment.Right
    TextLabel.TextTransparency = 1
    
    task.spawn(function()
        TweenService:Create(TextLabel, TweenInfo.new(0.6), {
            TextTransparency = 0, 
            Position = UDim2.new(1, -210, 1, -40)
        }):Play()
        task.wait(2.5)
        TweenService:Create(TextLabel, TweenInfo.new(0.6), {
            TextTransparency = 1, 
            Position = UDim2.new(1, -210, 1, -20)
        }):Play()
        task.wait(1)
        FloatingGui:Destroy()
    end)
end

ShowFloatingText()

-- // UI Creation
local Gui = Instance.new("ScreenGui", CoreGui)
Gui.Name = "SeraphinHelper"
Gui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame", Gui)
MainFrame.Size = UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT)
MainFrame.Position = UDim2.new(0.5, -UI_WIDTH/2, 0.4, 0)
MainFrame.BackgroundColor3 = BG_MAIN
MainFrame.BackgroundTransparency = TRANSPARENCY
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 8)

local Stroke = Instance.new("UIStroke", MainFrame)
Stroke.Color = ACCENT
Stroke.Thickness = 1.2
Stroke.Transparency = 0.6

-- Header
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 35)
Header.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Header.BackgroundTransparency = 0.4
Instance.new("UICorner", Header).CornerRadius = UDim.new(0, 8)

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(0.6, 0, 1, 0)
Title.Position = UDim2.new(0.04, 0, 0, 0)
Title.Text = "SERAPHIN <font color=\"rgb(0,255,170)\">HELPER</font>"
Title.RichText = true
Title.TextColor3 = Color3.new(1,1,1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.BackgroundTransparency = 1
Title.TextXAlignment = Enum.TextXAlignment.Left

local MinBtn = Instance.new("TextButton", Header)
MinBtn.Size = UDim2.new(0, 60, 0, 24)
MinBtn.Position = UDim2.new(1, -68, 0.5, -12)
MinBtn.Text = "HIDE"
MinBtn.TextColor3 = Color3.new(1, 1, 1)
MinBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
MinBtn.Font = Enum.Font.GothamBold
MinBtn.TextSize = 10
Instance.new("UICorner", MinBtn).CornerRadius = UDim.new(0, 5)

-- Button Container
local Container = Instance.new("Frame", MainFrame)
Container.Name = "Container"
Container.Size = UDim2.new(1, -20, 1, -80)
Container.Position = UDim2.new(0, 10, 0, 45)
Container.BackgroundTransparency = 1

local Layout = Instance.new("UIGridLayout", Container)
Layout.CellSize = UDim2.new(0.5, -8, 0, 45)
Layout.CellPadding = UDim2.new(0, 16, 0, 12)
Layout.VerticalAlignment = Enum.VerticalAlignment.Center

local function CreateButton(text)
    local btn = Instance.new("TextButton", Container)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 11
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.BackgroundColor3 = Color3.fromRGB(25, 25, 28)
    btn.BackgroundTransparency = 0.1
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
    return btn
end

local PotatoBtn = CreateButton("BOOSTER: OFF")
local WowBtn = CreateButton("WATER WALK: OFF")
local RenderBtn = CreateButton("NO RENDER: OFF")
local FpsCapBtn = CreateButton("FPS: UNLIMITED")

-- Footer
local Footer = Instance.new("Frame", MainFrame)
Footer.Size = UDim2.new(1, 0, 0, 30)
Footer.Position = UDim2.new(0, 0, 1, -30)
Footer.BackgroundTransparency = 1

local FpsDisplay = Instance.new("TextLabel", Footer)
FpsDisplay.Size = UDim2.new(1, -15, 1, 0)
FpsDisplay.BackgroundTransparency = 1
FpsDisplay.TextColor3 = ACCENT
FpsDisplay.Text = "FPS: -- | SeraphinXRaka"
FpsDisplay.Font = Enum.Font.Code
FpsDisplay.TextSize = 11
FpsDisplay.TextXAlignment = Enum.TextXAlignment.Right

-- // LOGIC SECTION

-- 1. Optimized Booster Mode (Super Potato)
PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "BOOSTER: ON" or "BOOSTER: OFF"
    PotatoBtn.BackgroundColor3 = Optimized and Color3.fromRGB(0, 120, 80) or Color3.fromRGB(25, 25, 28)
    
    Lighting.GlobalShadows = not Optimized
    
    -- Post Processing Effects
    for _, effect in pairs(Lighting:GetChildren()) do
        if effect:IsA("PostEffect") or effect:IsA("BloomEffect") or effect:IsA("BlurEffect") or effect:IsA("SunRaysEffect") then
            effect.Enabled = not Optimized
        end
    end

    -- Objek & Material
    for _, v in pairs(game:GetDescendants()) do
        if v:IsA("BasePart") then
            v.Material = Optimized and Enum.Material.SmoothPlastic or Enum.Material.Plastic
            v.CastShadow = not Optimized
        elseif v:IsA("Texture") or v:IsA("Decal") then
            v.Transparency = Optimized and 1 or 0
        elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then
            v.Enabled = not Optimized
        end
    end
end)

-- 2. FPS Cap Logic
FpsCapBtn.MouseButton1Click:Connect(function()
    currentLimitIndex = currentLimitIndex % #fpsLimits + 1
    local newLimit = fpsLimits[currentLimitIndex]
    if setfpscap then setfpscap(newLimit) end
    FpsCapBtn.Text = (newLimit > 900) and "FPS: UNLIMITED" or "FPS: " .. newLimit
end)

-- 3. No Render Mode
RenderBtn.MouseButton1Click:Connect(function()
    AfkModeActive = not AfkModeActive
    RunService:Set3dRenderingEnabled(not AfkModeActive)
    RenderBtn.Text = AfkModeActive and "NO RENDER: ON" or "NO RENDER: OFF"
    RenderBtn.BackgroundColor3 = AfkModeActive and Color3.fromRGB(120, 30, 30) or Color3.fromRGB(25, 25, 28)
end)

-- 4. Walk on Water
WowBtn.MouseButton1Click:Connect(function()
    WowEnabled = not WowEnabled
    WowBtn.Text = WowEnabled and "WATER WALK: ON" or "WATER WALK: OFF"
    WowBtn.BackgroundColor3 = WowEnabled and Color3.fromRGB(0, 120, 80) or Color3.fromRGB(25, 25, 28)
    if WowEnabled then
        BV = Instance.new("BodyVelocity", HRP)
        BV.MaxForce = Vector3.new(0, 1e6, 0)
        BV.Velocity = Vector3.zero
        Conn = RunService.Heartbeat:Connect(function()
            if HRP then HRP.AssemblyLinearVelocity = Vector3.new(HRP.AssemblyLinearVelocity.X, 0, HRP.AssemblyLinearVelocity.Z) end
        end)
    else
        if Conn then Conn:Disconnect() end
        if BV then BV:Destroy() end
    end
end)

-- 5. Hide/Show Function
MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    if Minimized then
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, 35), "Out", "Quad", 0.2, true)
        Container.Visible = false
        Footer.Visible = false
        MinBtn.Text = "SHOW"
    else
        MainFrame:TweenSize(UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.2, true)
        task.wait(0.1)
        Container.Visible = true
        Footer.Visible = true
        MinBtn.Text = "HIDE"
    end
end)

-- FPS Loop
local lastT = os.clock()
local frames = 0
RunService.RenderStepped:Connect(function()
    frames = frames + 1
    if os.clock() - lastT >= 1 then
        FpsDisplay.Text = "FPS: " .. frames .. " | SeraphinXRaka"
        frames = 0
        lastT = os.clock()
    end
end)

-- ====================================================
-- LOGIC: GEARS SCANNER
-- ====================================================

local function UpdateGearsList()
    for _, child in pairs(InvListFrame:GetChildren()) do
        if child:IsA("TextButton") then child:Destroy() end
    end
    
    -- PATH TERBARU DARI USER
    local gearsFolder = ReplicatedStorage:FindFirstChild("Modules")
    if gearsFolder then
        gearsFolder = gearsFolder:FindFirstChild("ModelDownloader")
        if gearsFolder then
            gearsFolder = gearsFolder:FindFirstChild("Collection")
            if gearsFolder then
                gearsFolder = gearsFolder:FindFirstChild("Gears")
            end
        end
    end
    
    if gearsFolder then
        local found = gearsFolder:GetChildren()
        for _, gear in pairs(found) do
            local btn = Instance.new("TextButton", InvListFrame)
            btn.Size = UDim2.new(1, 0, 0, 25)
            btn.BackgroundColor3 = Color3.fromRGB(30, 30, 35)
            btn.Text = "  " .. gear.Name
            btn.TextColor3 = Color3.new(0.9, 0.9, 0.9)
            btn.Font = Enum.Font.Gotham
            btn.TextSize = 11
            btn.TextXAlignment = Enum.TextXAlignment.Left
            btn.BorderSizePixel = 0
            
            btn.MouseButton1Click:Connect(function()
                SelectedItem = gear.Name
                SelectedDisplay.Text = "Selected: " .. gear.Name
                for _, b in pairs(InvListFrame:GetChildren()) do
                    if b:IsA("TextButton") then b.BackgroundColor3 = Color3.fromRGB(30, 30, 35) end
                end
                btn.BackgroundColor3 = ACCENT
            end)
        end
        ScanBtn.Text = "REFRESH (" .. #found .. " Gears)"
    else
        ScanBtn.Text = "ERROR: Gears Path Not Found"
    end
end

ScanBtn.MouseButton1Click:Connect(UpdateGearsList)

-- SELL LOGIC BERDASARKAN SIMPLESPY USER
SellSelectBtn.MouseButton1Click:Connect(function()
    if SelectedItem == "" then return end
    
    local success, err = pcall(function()
        -- PATH REMOTE DARI SIMPLESPY USER
        local remote = ReplicatedStorage.Packages._Index:FindFirstChild("sleitnick_net@0.2.0").net:FindFirstChild("RF/SellItem")
        
        -- Mengikuti format SimpleSpy: InvokeServer(item_name)
        remote:InvokeServer(SelectedItem)
    end)
    
    if success then
        SelectedDisplay.Text = "Success Sold: " .. SelectedItem
    else
        warn("Sell Error: " .. tostring(err))
        SelectedDisplay.Text = "Error Selling!"
    end
end)

-- ====================================================
-- EXTRA FEATURES
-- ====================================================
local PotatoBtn = CreateButton("Booster Mode: OFF")
local InstantBtn = CreateButton("Instant Interaction: OFF")

PotatoBtn.MouseButton1Click:Connect(function()
    Optimized = not Optimized
    PotatoBtn.Text = Optimized and "Booster Mode: ON" or "Booster Mode: OFF"
    PotatoBtn.TextColor3 = Optimized and ACCENT or Color3.fromRGB(220, 220, 220)
    Lighting.GlobalShadows = not Optimized
    if Optimized then
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("BasePart") then v.Material = Enum.Material.SmoothPlastic elseif v:IsA("Texture") then v.Transparency = 1 end
        end
    end
end)

InstantBtn.MouseButton1Click:Connect(function()
    InstantPromptEnabled = not InstantPromptEnabled
    InstantBtn.Text = InstantPromptEnabled and "Instant Interaction: ON" or "Instant Interaction: OFF"
    InstantBtn.TextColor3 = InstantPromptEnabled and ACCENT or Color3.fromRGB(220, 220, 220)
    task.spawn(function()
        while InstantPromptEnabled do
            for _, prompt in pairs(Workspace:GetDescendants()) do
                if prompt:IsA("ProximityPrompt") then prompt.HoldDuration = 0 end
            end
            task.wait(1)
        end
    end)
end)

MinBtn.MouseButton1Click:Connect(function()
    Minimized = not Minimized
    MainFrame:TweenSize(Minimized and UDim2.new(0, UI_WIDTH, 0, 35) or UDim2.new(0, UI_WIDTH, 0, UI_HEIGHT), "Out", "Quad", 0.3, true)
    ScrollFrame.Visible = not Minimized
    MinBtn.Text = Minimized and "SHOW" or "HIDE"
end)

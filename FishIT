-- Fungsi Membuat Tab Button Vertical
local function CreateTabBtn(text, order)
    local btn = Instance.new("TextButton", TabHolder)
    btn.Name = text .. "Tab"
    btn.LayoutOrder = order
    btn.Size = UDim2.new(1, -10, 0, 30)
    btn.BackgroundTransparency = 1
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 11
    btn.TextColor3 = UI_THEME.TabOff
    
    -- Indikator (Garis Kiri)
    local ind = Instance.new("Frame", btn)
    ind.Name = "Indicator"
    ind.Size = UDim2.new(0, 2, 1, 0)
    ind.Position = UDim2.new(0, 0, 0, 0)
    ind.BackgroundColor3 = UI_THEME.Accent
    ind.BackgroundTransparency = 1 -- Hidden by default
    ind.BorderSizePixel = 0
    
    return btn, ind
end

